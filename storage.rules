rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Función helper para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Imágenes de productos
    match /products/{productId}/{allPaths=**} {
      // Cualquiera puede leer imágenes de productos (públicas)
      allow read: if true;
      
      // Solo admins pueden escribir (subir/eliminar)
      allow write: if isAdmin();
    }
    
    // Avatares de usuarios
    match /users/{userId}/avatar/{allPaths=**} {
      // Cualquiera puede leer avatares (públicos)
      allow read: if true;
      
      // Solo el usuario propietario puede escribir su propio avatar
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
