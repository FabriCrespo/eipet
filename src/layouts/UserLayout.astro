---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import UserSidebar from '../components/UserSidebar.astro';

interface Props {
	currentSection?: string;
	sectionConfig?: ReadonlyArray<{ readonly id: string; readonly title: string; readonly Component: any }>;
}

const { currentSection = 'info', sectionConfig = [] }: Props = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Mi Cuenta - eipet</title>
	</head>
	<body>
		<div class="min-h-screen flex flex-col bg-gray-50">
		  <Header />
		  <div class="flex grow bg-gray-100 pb-10 lg:pb-14">
			<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex flex-col lg:flex-row gap-8">
				<!-- Sidebar -->
				<div class="lg:w-auto overflow-visible">
					<UserSidebar currentSection={currentSection} sectionConfig={sectionConfig} />
				</div>
				
				<!-- Contenido Principal -->
				<main class="flex-1 bg-white rounded-3xl shadow-lg p-6 lg:p-8">
				  <slot />
				</main>
			</div>
		  </div>
		  <Footer />
		</div>
	  </body>
</html>

