<!-- Hero Section con Carrusel Espectacular -->
<section class="relative w-full h-[400px] sm:h-[450px] md:h-[500px] lg:h-[550px] xl:h-[600px] overflow-hidden">
  <!-- Efectos de fondo animados -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
    <div class="absolute inset-0 bg-linear-to-br from-[#5d3fbb]/40 via-[#6d4fcc]/30 to-[#7d5fdd]/40"></div>
    <div class="absolute top-0 right-0 w-64 h-64 bg-[#ffff11] rounded-full blur-3xl opacity-15 animate-pulse-slow"></div>
    <div class="absolute bottom-0 left-0 w-56 h-56 bg-purple-400 rounded-full blur-3xl opacity-10 animate-pulse-slow" style="animation-delay: 1s;"></div>
  </div>

  <!-- Slides del carrusel -->
  <div id="carousel" class="relative w-full h-full">
    <!-- Slide 1: Perro -->
    <div class="carousel-slide absolute inset-0 w-full h-full opacity-0 transition-opacity duration-700" data-slide="0">
      <div class="relative w-full h-full">
        <!-- Overlay con gradiente animado -->
        <div class="absolute inset-0 bg-linear-to-br from-[#5d3fbb]/60 via-[#6d4fcc]/50 to-[#5d3fbb]/70 z-10"></div>
        <div class="absolute inset-0 bg-linear-to-t from-black/60 via-black/20 to-transparent z-10"></div>
        
        <!-- Imagen con efecto parallax -->
        <div class="absolute inset-0 overflow-hidden">
          <img 
            src="/images/hero-01.jpg" 
            alt="Perro feliz" 
            class="hero-image absolute inset-0 w-full h-full object-cover object-center lg:object-[center_30%] scale-105 lg:scale-110 transition-transform duration-1000"
          />
        </div>

        <!-- Contenido del slide -->
        <div class="absolute inset-0 flex items-center justify-center px-4 sm:px-6 lg:px-8 z-20">
          <div class="text-center max-w-4xl w-full">
            <!-- Badge decorativo -->
            <div class="inline-block mb-2 sm:mb-3 animate-fade-in">
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-white/20 backdrop-blur-md rounded-full border border-white/30 text-white text-xs font-semibold">
                <span class="w-1.5 h-1.5 bg-[#ffff11] rounded-full animate-pulse"></span>
                Productos Premium
              </span>
            </div>

            <!-- Título con gradiente -->
            <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-extrabold mb-2 sm:mb-3 md:mb-4 leading-tight animate-fade-in">
              <span class="block text-white drop-shadow-2xl">Encuentra todo para</span>
              <span class="block bg-linear-to-r from-[#ffff11] via-yellow-300 to-[#ffff11] bg-clip-text text-transparent animate-gradient-x drop-shadow-2xl">
                tu mascota
              </span>
            </h1>

            <!-- Descripción -->
            <p class="text-sm sm:text-base md:text-lg lg:text-xl text-white/95 mb-4 sm:mb-5 md:mb-6 px-2 font-medium drop-shadow-lg animate-fade-in-delay max-w-2xl mx-auto">
              Los mejores productos al mejor precio para el cuidado de tu compañero
            </p>

            <!-- Botón CTA mejorado -->
            <div class="animate-fade-in-delay-2">
              <a 
                href="/products?pet=dog" 
                class="group relative inline-flex items-center gap-2 bg-[#ffff11] text-[#5d3fbb] font-bold text-sm sm:text-base px-5 sm:px-6 md:px-8 py-2 sm:py-2.5 md:py-3 rounded-lg sm:rounded-xl hover:bg-yellow-400 hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-[0_0_30px_rgba(255,255,17,0.5)] overflow-hidden"
                data-astro-prefetch
              >
                <span class="relative z-10">Ver Productos para Perros</span>
                <svg class="w-4 h-4 sm:w-5 sm:h-5 relative z-10 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
                <div class="absolute inset-0 bg-linear-to-r from-yellow-300/0 via-yellow-300/50 to-yellow-300/0 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide 2: Gato -->
    <div class="carousel-slide absolute inset-0 w-full h-full opacity-0 transition-opacity duration-700" data-slide="1">
      <div class="relative w-full h-full">
        <!-- Overlay con gradiente animado -->
        <div class="absolute inset-0 bg-linear-to-bl from-[#6d4fcc]/60 via-[#5d3fbb]/50 to-[#7d5fdd]/70 z-10"></div>
        <div class="absolute inset-0 bg-linear-to-t from-black/60 via-black/20 to-transparent z-10"></div>
        
        <!-- Imagen con efecto parallax -->
        <div class="absolute inset-0 overflow-hidden">
          <img 
            src="/images/hero-02.jpg" 
            alt="Gato elegante" 
            class="hero-image absolute inset-0 w-full h-full object-cover object-center lg:object-[center_40%] scale-105 lg:scale-110 transition-transform duration-1000"
          />
        </div>

        <!-- Contenido del slide -->
        <div class="absolute inset-0 flex items-center justify-center px-4 sm:px-6 lg:px-8 z-20">
          <div class="text-center max-w-4xl w-full">
            <!-- Badge decorativo -->
            <div class="inline-block mb-2 sm:mb-3 animate-fade-in">
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-white/20 backdrop-blur-md rounded-full border border-white/30 text-white text-xs font-semibold">
                <span class="w-1.5 h-1.5 bg-[#ffff11] rounded-full animate-pulse"></span>
                Calidad Premium
              </span>
            </div>

            <!-- Título con gradiente -->
            <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-extrabold mb-2 sm:mb-3 md:mb-4 leading-tight animate-fade-in">
              <span class="block text-white drop-shadow-2xl">Cuidado felino de</span>
              <span class="block bg-linear-to-r from-[#ffff11] via-yellow-300 to-[#ffff11] bg-clip-text text-transparent animate-gradient-x drop-shadow-2xl">
                primera calidad
              </span>
            </h1>

            <!-- Descripción -->
            <p class="text-sm sm:text-base md:text-lg lg:text-xl text-white/95 mb-4 sm:mb-5 md:mb-6 px-2 font-medium drop-shadow-lg animate-fade-in-delay max-w-2xl mx-auto">
              Todo lo que tu gato necesita para estar saludable y feliz
            </p>

            <!-- Botón CTA mejorado -->
            <div class="animate-fade-in-delay-2">
              <a 
                href="/products?pet=cat" 
                class="group relative inline-flex items-center gap-2 bg-[#ffff11] text-[#5d3fbb] font-bold text-sm sm:text-base px-5 sm:px-6 md:px-8 py-2 sm:py-2.5 md:py-3 rounded-lg sm:rounded-xl hover:bg-yellow-400 hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-[0_0_30px_rgba(255,255,17,0.5)] overflow-hidden"
                data-astro-prefetch
              >
                <span class="relative z-10">Explorar Productos para Gatos</span>
                <svg class="w-4 h-4 sm:w-5 sm:h-5 relative z-10 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
                <div class="absolute inset-0 bg-linear-to-r from-yellow-300/0 via-yellow-300/50 to-yellow-300/0 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide 3: Mascotas juntas -->
    <div class="carousel-slide absolute inset-0 w-full h-full opacity-0 transition-opacity duration-700" data-slide="2">
      <div class="relative w-full h-full">
        <!-- Overlay con gradiente animado -->
        <div class="absolute inset-0 bg-linear-to-br from-[#5d3fbb]/60 via-[#6d4fcc]/50 to-[#5d3fbb]/70 z-10"></div>
        <div class="absolute inset-0 bg-linear-to-t from-black/60 via-black/20 to-transparent z-10"></div>
        
        <!-- Imagen con efecto parallax -->
        <div class="absolute inset-0 overflow-hidden">
          <img 
            src="/images/hero-03.jpg" 
            alt="Mascotas felices" 
            class="hero-image absolute inset-0 w-full h-full object-cover object-center lg:object-[center_35%] scale-105 lg:scale-110 transition-transform duration-1000"
          />
        </div>

        <!-- Contenido del slide -->
        <div class="absolute inset-0 flex items-center justify-center px-4 sm:px-6 lg:px-8 z-20">
          <div class="text-center max-w-4xl w-full">
            <!-- Badge decorativo -->
            <div class="inline-block mb-2 sm:mb-3 animate-fade-in">
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-white/20 backdrop-blur-md rounded-full border border-white/30 text-white text-xs font-semibold">
                <span class="w-1.5 h-1.5 bg-[#ffff11] rounded-full animate-pulse"></span>
                Ofertas Especiales
              </span>
            </div>

            <!-- Título con gradiente -->
            <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-extrabold mb-2 sm:mb-3 md:mb-4 leading-tight animate-fade-in">
              <span class="block text-white drop-shadow-2xl">Ofertas especiales</span>
              <span class="block bg-linear-to-r from-[#ffff11] via-yellow-300 to-[#ffff11] bg-clip-text text-transparent animate-gradient-x drop-shadow-2xl">
                para toda la familia
              </span>
            </h1>

            <!-- Descripción -->
            <p class="text-sm sm:text-base md:text-lg lg:text-xl text-white/95 mb-4 sm:mb-5 md:mb-6 px-2 font-medium drop-shadow-lg animate-fade-in-delay max-w-2xl mx-auto">
              Descuentos increíbles en productos seleccionados
            </p>

            <!-- Botón CTA mejorado -->
            <div class="animate-fade-in-delay-2">
              <a 
                href="/products?filter=discount" 
                class="group relative inline-flex items-center gap-2 bg-[#ffff11] text-[#5d3fbb] font-bold text-sm sm:text-base px-5 sm:px-6 md:px-8 py-2 sm:py-2.5 md:py-3 rounded-lg sm:rounded-xl hover:bg-yellow-400 hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-[0_0_30px_rgba(255,255,17,0.5)] overflow-hidden"
                data-astro-prefetch
              >
                <span class="relative z-10">Ver Ofertas Especiales</span>
                <svg class="w-4 h-4 sm:w-5 sm:h-5 relative z-10 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
                <div class="absolute inset-0 bg-linear-to-r from-yellow-300/0 via-yellow-300/50 to-yellow-300/0 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Botones de navegación mejorados -->
  <button 
    id="prev-btn" 
    class="hidden sm:flex absolute left-2 sm:left-3 md:left-4 top-1/2 -translate-y-1/2 z-30 bg-white/20 hover:bg-white/30 backdrop-blur-lg text-white p-2 sm:p-2.5 rounded-full transition-all duration-300 hover:scale-110 active:scale-95 shadow-lg hover:shadow-xl touch-manipulation items-center justify-center border border-white/20 group"
    aria-label="Slide anterior"
  >
    <svg class="w-4 h-4 sm:w-5 sm:h-5 group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
    </svg>
  </button>
  <button 
    id="next-btn" 
    class="hidden sm:flex absolute right-2 sm:right-3 md:right-4 top-1/2 -translate-y-1/2 z-30 bg-white/20 hover:bg-white/30 backdrop-blur-lg text-white p-2 sm:p-2.5 rounded-full transition-all duration-300 hover:scale-110 active:scale-95 shadow-lg hover:shadow-xl touch-manipulation items-center justify-center border border-white/20 group"
    aria-label="Siguiente slide"
  >
    <svg class="w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7" />
    </svg>
  </button>

  <!-- Indicadores mejorados -->
  <div class="absolute bottom-3 sm:bottom-4 md:bottom-5 left-1/2 -translate-x-1/2 z-30 flex gap-1.5 sm:gap-2">
    <button 
      class="carousel-indicator w-2.5 h-2.5 sm:w-3 sm:h-3 rounded-full bg-white/40 hover:bg-white/60 backdrop-blur-sm transition-all duration-300 active touch-manipulation border border-white/30 group"
      data-slide="0"
      aria-label="Ir a slide 1"
    >
      <span class="absolute inset-0 rounded-full bg-white scale-0 group-hover:scale-100 transition-transform duration-300"></span>
    </button>
    <button 
      class="carousel-indicator w-2.5 h-2.5 sm:w-3 sm:h-3 rounded-full bg-white/40 hover:bg-white/60 backdrop-blur-sm transition-all duration-300 touch-manipulation border border-white/30 group"
      data-slide="1"
      aria-label="Ir a slide 2"
    >
      <span class="absolute inset-0 rounded-full bg-white scale-0 group-hover:scale-100 transition-transform duration-300"></span>
    </button>
    <button 
      class="carousel-indicator w-2.5 h-2.5 sm:w-3 sm:h-3 rounded-full bg-white/40 hover:bg-white/60 backdrop-blur-sm transition-all duration-300 touch-manipulation border border-white/30 group"
      data-slide="2"
      aria-label="Ir a slide 3"
    >
      <span class="absolute inset-0 rounded-full bg-white scale-0 group-hover:scale-100 transition-transform duration-300"></span>
    </button>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.15;
      transform: scale(1);
    }
    50% {
      opacity: 0.25;
      transform: scale(1.1);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out both;
  }

  .animate-fade-in-delay {
    animation: fadeIn 1s ease-out 0.3s both;
  }

  .animate-fade-in-delay-2 {
    animation: fadeIn 1s ease-out 0.6s both;
  }

  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 3s ease infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  .carousel-slide.active {
    opacity: 1;
    z-index: 10;
  }

  .carousel-slide.active .hero-image {
    transform: scale(1);
    animation: float 6s ease-in-out infinite;
  }

  .carousel-indicator.active {
    background-color: white;
    width: 1.5rem;
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
  }

  @media (min-width: 640px) {
    .carousel-indicator.active {
      width: 2rem;
    }
  }

  .touch-manipulation {
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  /* Efectos de brillo en botones */
  button:hover {
    box-shadow: 0 0 30px rgba(255, 255, 255, 0.3);
  }

  /* Mejoras de rendimiento */
  .hero-image {
    will-change: transform;
  }
</style>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.carousel-slide');
  const indicators = document.querySelectorAll('.carousel-indicator');
  const totalSlides = slides.length;
  let autoPlayInterval: ReturnType<typeof setInterval> | null = null;

  function showSlide(index: number) {
    // Remover active de todos los slides e indicadores
    slides.forEach(slide => slide.classList.remove('active'));
    indicators.forEach(indicator => indicator.classList.remove('active'));

    // Agregar active al slide e indicador actual
    slides[index].classList.add('active');
    indicators[index].classList.add('active');
    
    currentSlide = index;
  }

  function nextSlide() {
    const next = (currentSlide + 1) % totalSlides;
    showSlide(next);
  }

  function prevSlide() {
    const prev = (currentSlide - 1 + totalSlides) % totalSlides;
    showSlide(prev);
  }

  function startAutoPlay() {
    autoPlayInterval = setInterval(nextSlide, 6000); // Cambia cada 6 segundos
  }

  function stopAutoPlay() {
    if (autoPlayInterval) {
      clearInterval(autoPlayInterval);
      autoPlayInterval = null;
    }
  }

  // Event listeners
  document.getElementById('next-btn')?.addEventListener('click', () => {
    nextSlide();
    stopAutoPlay();
    startAutoPlay();
  });

  document.getElementById('prev-btn')?.addEventListener('click', () => {
    prevSlide();
    stopAutoPlay();
    startAutoPlay();
  });

  // Indicadores
  indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', () => {
      showSlide(index);
      stopAutoPlay();
      startAutoPlay();
    });
  });

  // Inicializar
  document.addEventListener('DOMContentLoaded', () => {
    showSlide(0);
    startAutoPlay();

    // Pausar autoplay al hacer hover
    const carousel = document.getElementById('carousel');
    if (carousel) {
      carousel.addEventListener('mouseenter', stopAutoPlay);
      carousel.addEventListener('mouseleave', startAutoPlay);
    }
  });
</script>
