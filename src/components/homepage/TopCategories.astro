    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out both;
  }

  /* Efectos hover mejorados */
  .category-card {
    will-change: transform;
    transform: translateZ(0);
  }

  .category-card:hover {
    border-color: rgba(93, 63, 187, 0.4);
  }

  /* Line clamp */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
