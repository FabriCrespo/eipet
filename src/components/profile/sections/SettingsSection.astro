  <script>
    (function() {
      const tabButtons = document.querySelectorAll('.settings-tab');
      const tabContents = document.querySelectorAll('.settings-tab-content');

      function switchTab(tabId: string) {
        // Actualizar botones
        tabButtons.forEach((btn) => {
          const btnTabId = btn.getAttribute('data-tab');
          const isActive = btnTabId === tabId;
          
          if (isActive) {
            btn.classList.remove('text-gray-700', 'hover:bg-gray-50');
            btn.classList.add('bg-linear-to-r', 'from-purple-500', 'to-pink-500', 'text-white', 'shadow-lg');
            const icon = btn.querySelector('svg');
            if (icon) icon.classList.remove('text-gray-600');
            if (icon) icon.classList.add('text-white');
          } else {
            btn.classList.remove('bg-linear-to-r', 'from-purple-500', 'to-pink-500', 'text-white', 'shadow-lg');
            btn.classList.add('text-gray-700', 'hover:bg-gray-50');
            const icon = btn.querySelector('svg');
            if (icon) icon.classList.remove('text-white');
            if (icon) icon.classList.add('text-gray-600');
          }
        });

        // Actualizar contenidos
        tabContents.forEach((content) => {
          const contentTabId = content.getAttribute('data-tab-content');
          if (contentTabId === tabId) {
            content.classList.remove('hidden');
          } else {
            content.classList.add('hidden');
          }
        });
      }

      // Event listeners
      tabButtons.forEach((btn) => {
        btn.addEventListener('click', () => {
          const tabId = btn.getAttribute('data-tab');
          if (tabId) {
            switchTab(tabId);
          }
        });
      });
    })();
  </script>
