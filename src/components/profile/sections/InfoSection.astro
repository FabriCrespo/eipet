    }
    
    [data-form-container][data-editing="true"] form > div:nth-child(1) {
      animation-delay: 0.05s;
    }
    
    [data-form-container][data-editing="true"] form > div:nth-child(2) {
      animation-delay: 0.1s;
    }
    
    [data-form-container][data-editing="true"] form > div:nth-child(3) {
      animation-delay: 0.15s;
    }
    
