---
const headerStats = [
  { id: 'orders', label: 'Pedidos', color: 'text-white' },
  { id: 'points', label: 'Puntos', color: 'text-white' },
  { id: 'savedPets', label: 'Mascotas', color: 'text-white' },
  { id: 'memberSince', label: 'Desde', color: 'text-white' }
];
---

<section
  id="profile-info"
  class="space-y-5 w-full bg-transparent"
  data-editing="false"
  data-saving="false"
>
  <!-- Hero / Header -->
  <div class="relative overflow-hidden rounded-xl bg-linear-to-r from-purple-600 via-pink-500 to-orange-400 p-4 sm:p-5 shadow-lg">
    <div class="relative flex flex-col gap-4 sm:flex-row sm:items-center">
      <div class="relative mx-auto shrink-0 sm:mx-0">
        <div class="relative h-20 w-20 sm:h-24 sm:w-24 overflow-hidden rounded-full border-2 border-white/30 shadow-md bg-linear-to-br from-purple-400 to-pink-400">
          <!-- Avatar con imagen o icono por defecto -->
          <div id="profile-avatar-container" class="h-full w-full flex items-center justify-center">
            <img
              id="profile-avatar"
              src=""
              alt="Avatar de usuario"
              class="h-full w-full object-cover hidden"
            />
            <svg
              id="profile-avatar-icon"
              class="h-10 w-10 sm:h-12 sm:w-12 text-white/90"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <label
            for="profile-avatar-input"
            class="absolute inset-0 flex cursor-pointer items-center justify-center bg-black/50 opacity-0 transition-opacity duration-200 hover:opacity-100 group"
          >
            <svg class="h-5 w-5 text-white group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <input
              id="profile-avatar-input"
              type="file"
              accept="image/jpeg,image/png,image/gif,image/webp"
              class="sr-only"
            />
          </label>
        </div>
      </div>

      <div class="flex-1 text-center text-white sm:text-left">
        <p class="text-xs uppercase tracking-wider text-white/80 mb-1">Mi Perfil</p>
        <h1 class="text-xl sm:text-2xl font-bold leading-tight" data-text="name">Tu nombre</h1>
        <p class="text-sm text-white/90 mt-0.5" data-text="email">usuario@demo.com</p>

        <dl class="mt-4 grid grid-cols-2 gap-2 sm:grid-cols-4">
          {headerStats.map((stat) => (
            <div
              class="rounded-lg bg-white/10 px-3 py-2 text-center backdrop-blur-sm"
              data-stat-card={stat.id}
            >
              <dt class={`text-xs ${stat.color} text-white/80`}>{stat.label}</dt>
              <dd class="text-lg font-bold text-white mt-0.5" data-stat={stat.id}>0</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- Información personal -->
  <div class="group relative overflow-hidden rounded-xl bg-white p-4 sm:p-5 shadow-md transition-all duration-200 data-[editing=true]:ring-2 data-[editing=true]:ring-purple-300 data-[editing=true]:shadow-lg" data-form-container>
    <!-- Indicador de edición -->
    <div class="absolute top-0 right-0 hidden h-1 w-full bg-linear-to-r from-purple-500 via-pink-500 to-orange-400 data-[editing=true]:block"></div>
    
    <div class="flex flex-wrap items-center justify-between gap-3 border-b border-gray-100 pb-4 transition-colors duration-200 data-[editing=true]:border-purple-200" data-header-section>
      <div class="flex items-center gap-3">
        <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-linear-to-br from-purple-500 to-indigo-500 text-white shadow-sm" data-icon-container>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <p class="text-xs font-medium text-gray-500" data-subtitle>Datos personales</p>
          <h2 class="text-lg font-bold text-gray-800" data-title>Información Personal</h2>
        </div>
      </div>
      <div class="hidden items-center gap-2 data-[editing=true]:flex" data-edit-toolbar>
        <button
          type="button"
          data-action="cancel"
          class="flex items-center gap-1.5 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 font-medium transition-all duration-200 hover:border-gray-400 hover:bg-gray-50"
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          <span>Cancelar</span>
        </button>
        <button
          type="button"
          data-action="save"
          class="relative flex items-center gap-2 overflow-hidden rounded-lg bg-linear-to-r from-purple-600 via-pink-600 to-purple-600 px-5 py-2 text-sm font-semibold text-white transition-all duration-200 hover:shadow-md hover:shadow-purple-500/40 disabled:opacity-70 disabled:cursor-not-allowed"
        >
          <span class="relative flex items-center gap-2" data-state="idle">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Guardar</span>
          </span>
          <span class="relative hidden items-center gap-2" data-state="saving">
            <span class="inline-block h-4 w-4 animate-spin rounded-full border-2 border-white border-t-transparent"></span>
            <span>Guardando...</span>
          </span>
        </button>
      </div>
    </div>

    <form id="profile-form" class="mt-5 grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="group space-y-1.5">
        <label class="flex items-center gap-1.5 text-xs font-semibold text-gray-600" data-label>
          <span>Nombre</span>
        </label>
        <div class="relative">
          <input
            type="text"
            data-input="firstName"
            class="peer w-full rounded-lg border border-gray-200 bg-gray-50 px-3 py-2.5 text-sm text-gray-800 transition-all duration-200 placeholder:text-gray-400 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
            placeholder="Tu nombre"
          />
        </div>
      </div>
      <div class="group space-y-1.5">
        <label class="flex items-center gap-1.5 text-xs font-semibold text-gray-600" data-label>
          <span>Apellido</span>
        </label>
        <div class="relative">
          <input
            type="text"
            data-input="lastName"
            class="peer w-full rounded-lg border border-gray-200 bg-gray-50 px-3 py-2.5 text-sm text-gray-800 transition-all duration-200 placeholder:text-gray-400 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
            placeholder="Tu apellido"
          />
        </div>
      </div>
      <div class="group space-y-1.5">
        <label class="flex items-center gap-1.5 text-xs font-semibold text-gray-600" data-label>
          <span>Correo electrónico</span>
        </label>
        <div class="relative">
          <input
            type="email"
            data-input="email"
            class="peer w-full rounded-lg border border-gray-200 bg-gray-50 px-3 py-2.5 text-sm text-gray-800 transition-all duration-200 placeholder:text-gray-400 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
            placeholder="correo@ejemplo.com"
          />
        </div>
      </div>
      <div class="group space-y-1.5">
        <label class="flex items-center gap-1.5 text-xs font-semibold text-gray-600" data-label>
          <span>Teléfono</span>
        </label>
        <div class="relative">
          <input
            type="tel"
            data-input="phone"
            class="peer w-full rounded-lg border border-gray-200 bg-gray-50 px-3 py-2.5 text-sm text-gray-800 transition-all duration-200 placeholder:text-gray-400 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
            placeholder="+591 71234567"
          />
        </div>
      </div>
      <div class="group space-y-1.5">
        <label class="flex items-center gap-1.5 text-xs font-semibold text-gray-600" data-label>
          <span>Fecha de nacimiento</span>
        </label>
        <div class="relative">
          <input
            type="date"
            data-input="birthdate"
            class="peer w-full rounded-lg border border-gray-200 bg-gray-50 px-3 py-2.5 text-sm text-gray-800 transition-all duration-200 focus:border-emerald-400 focus:bg-white focus:outline-none focus:ring-2 focus:ring-emerald-100 disabled:cursor-not-allowed disabled:opacity-60"
          />
        </div>
      </div>
    </form>
  </div>

  <!-- Preferencias -->
  <div class="rounded-xl bg-white p-4 sm:p-5 shadow-md">
    <div class="flex items-center gap-3 border-b border-gray-100 pb-3">
      <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-linear-to-br from-emerald-500 to-emerald-600 text-white shadow-sm">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 00-9.33-4.906" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5v6a6 6 0 006 6h.75" />
        </svg>
      </div>
      <div>
        <p class="text-xs font-medium text-gray-500">Comunicación</p>
        <h2 class="text-lg font-bold text-gray-800">Preferencias</h2>
      </div>
    </div>
    <div class="mt-4 space-y-3">
      <label class="flex flex-wrap items-center justify-between gap-3 rounded-lg border border-gray-200 p-3 transition hover:border-purple-200 hover:shadow-sm">
        <div class="flex items-center gap-3">
          <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-linear-to-br from-blue-100 to-blue-200 text-blue-600">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-800">Newsletter</p>
            <p class="text-xs text-gray-500">Recibe novedades y ofertas exclusivas</p>
          </div>
        </div>
        <div class="relative inline-flex items-center">
          <input
            type="checkbox"
            data-toggle="newsletter"
            class="peer sr-only"
          />
          <div class="h-6 w-11 rounded-full bg-gray-200 transition peer-checked:bg-linear-to-r peer-checked:from-purple-500 peer-checked:to-pink-500"></div>
          <div class="absolute left-0.5 top-0.5 h-5 w-5 rounded-full bg-white transition peer-checked:translate-x-5"></div>
        </div>
      </label>
      <label class="flex flex-wrap items-center justify-between gap-3 rounded-lg border border-gray-200 p-3 transition hover:border-purple-200 hover:shadow-sm">
        <div class="flex items-center gap-3">
              <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-linear-to-br from-blue-100 to-blue-200 text-blue-600">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 00-9.33-4.906" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5v6a6 6 0 006 6h.75" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-800">Notificaciones push</p>
            <p class="text-xs text-gray-500">Alertas instantáneas sobre tus pedidos</p>
          </div>
        </div>
        <div class="relative inline-flex items-center">
          <input
            type="checkbox"
            data-toggle="notifications"
            class="peer sr-only"
          />
            <div class="h-6 w-11 rounded-full bg-gray-200 transition peer-checked:bg-linear-to-r peer-checked:from-purple-500 peer-checked:to-pink-500"></div>
          <div class="absolute left-0.5 top-0.5 h-5 w-5 rounded-full bg-white transition peer-checked:translate-x-5"></div>
        </div>
      </label>
    </div>
  </div>

  <!-- Acciones rápidas -->
  <div class="grid grid-cols-1 gap-3 md:grid-cols-3">
    <a
      href="/profile/security"
      class="group rounded-lg bg-gray-50 p-4 shadow-sm transition hover:shadow-md"
    >
      <div class="flex items-center gap-3">
        <div class="rounded-lg bg-emerald-600 p-2.5 text-white shadow-sm">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-bold text-gray-800">Seguridad</p>
          <p class="text-xs text-gray-500">Actualiza tu contraseña</p>
        </div>
      </div>
    </a>
    <a
      href="/profile/favorites"
      class="group rounded-lg bg-linear-to-br from-pink-50 to-rose-100 p-4 shadow-sm transition hover:shadow-md"
    >
      <div class="flex items-center gap-3">
        <div class="rounded-lg bg-linear-to-r from-pink-500 to-rose-600 p-2.5 text-white shadow-sm">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-bold text-gray-800">Mis favoritos</p>
          <p class="text-xs text-gray-500">Productos y mascotas guardadas</p>
        </div>
      </div>
    </a>
    <button
      type="button"
      data-action="logout"
      class="group rounded-lg bg-gray-50 p-4 text-left shadow-sm transition hover:shadow-md"
    >
      <div class="flex items-center gap-3">
        <div class="rounded-lg bg-red-500 p-2.5 text-white shadow-sm">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-bold text-red-600">Cerrar sesión</p>
          <p class="text-xs text-gray-500">Salir de mi cuenta</p>
        </div>
      </div>
    </button>
  </div>

  <script>
    // @ts-ignore - Extender Window interface para currentUserId
    (function() {
      // Obtener userId de forma segura
      function getUserId() {
        let userId = localStorage.getItem('userId');
        if (!userId && typeof window !== 'undefined') {
          // @ts-ignore
          userId = window.currentUserId || null;
        }
        if (!userId) {
          const profilePanel = document.getElementById('profile-content-panel');
          if (profilePanel) {
            userId = profilePanel.getAttribute('data-user-id');
          }
        }
        return userId;
      }
      
      // Exponer función globalmente
      if (typeof window !== 'undefined') {
        // @ts-ignore
        window.getUserId = getUserId;
      }
    })();
    
    const profileSection = document.getElementById('profile-info');
    if (profileSection) {
      const form = profileSection.querySelector('#profile-form');
      const inputs = form?.querySelectorAll('[data-input]');
      const toggles = profileSection.querySelectorAll('[data-toggle]');
      const statsElements = profileSection.querySelectorAll('[data-stat]');
      const editButton = profileSection.querySelector('[data-action="edit"]');
      const cancelButton = profileSection.querySelector('[data-action="cancel"]');
      const saveButton = profileSection.querySelector('[data-action="save"]');
      const logoutButton = profileSection.querySelector('[data-action="logout"]');
      const toolbar = profileSection.querySelector('[data-edit-toolbar]');
      const avatar = profileSection.querySelector('#profile-avatar');
      const avatarIcon = profileSection.querySelector('#profile-avatar-icon');
      const avatarInput = profileSection.querySelector('#profile-avatar-input');
      const defaultAvatar = '';

      let currentUser = null;
      let formData = {
        firstName: '',
        lastName: '',
        email: '',
        phone: '',
        birthdate: '',
        newsletter: false,
        notifications: false
      };
      let tempData = { ...formData };
      let profileImage = defaultAvatar;
      let isEditing = false;
      let isSaving = false;
      let stats = {
        orders: 0,
        points: 0,
        savedPets: 0,
        memberSince: ''
      };

      async function loadStats() {
        try {
          // Obtener userId usando la función helper
          // @ts-ignore
          let userId = typeof window !== 'undefined' && window.getUserId 
            ? window.getUserId() 
            : localStorage.getItem('userId');
          
          if (!userId) {
            console.warn('No se pudo obtener userId para cargar estadísticas');
            return;
          }

          const { getUserOrders } = await import('../../../lib/db/orders.js');
          const ordersResult = await getUserOrders(userId);
          const orders = ordersResult.data || [];

          // Calcular puntos (ejemplo: 10 puntos por pedido)
          const points = orders.length * 10;

          // Obtener fecha de creación del usuario
          let memberSince = '';
          if (currentUser?.createdAt) {
            const createdDate = currentUser.createdAt.toDate 
              ? currentUser.createdAt.toDate() 
              : new Date(currentUser.createdAt);
            memberSince = createdDate.getFullYear().toString();
          }

          stats = {
            orders: orders.length,
            points: points,
            savedPets: 0, // TODO: Implementar cuando haya sistema de mascotas
            memberSince: memberSince || new Date().getFullYear().toString()
          };

          syncStats();
        } catch (error) {
          console.error('Error loading stats:', error);
        }
      }

      function syncStats() {
        statsElements.forEach((el) => {
          const key = el.getAttribute('data-stat');
          if (key && stats[key] !== undefined) {
            el.textContent = stats[key].toString();
          }
        });
      }

      function syncHeader() {
        const fullName = `${formData.firstName || ''} ${formData.lastName || ''}`.trim() || 'Tu nombre';
        profileSection.querySelectorAll('[data-text="name"]').forEach((el) => {
          el.textContent = fullName;
        });
        profileSection.querySelectorAll('[data-text="email"]').forEach((el) => {
          el.textContent = formData.email || 'correo@ejemplo.com';
        });
        
        // Actualizar avatar: mostrar imagen si existe, sino mostrar icono
        if (avatar instanceof HTMLImageElement && avatarIcon instanceof SVGElement) {
          if (profileImage && profileImage !== defaultAvatar && profileImage.trim() !== '') {
            avatar.src = profileImage;
            avatar.classList.remove('hidden');
            avatarIcon.classList.add('hidden');
          } else {
            avatar.classList.add('hidden');
            avatarIcon.classList.remove('hidden');
          }
        }
      }

      function applyValues(targetData) {
        inputs?.forEach((input) => {
          const key = input.getAttribute('data-input');
          if (!key) return;
          
          if (key === 'birthdate' && targetData[key]) {
            const dateValue = targetData[key];
            if (dateValue instanceof Date) {
              input.value = dateValue.toISOString().slice(0, 10);
            } else if (typeof dateValue === 'string') {
              input.value = dateValue.slice(0, 10);
            } else if (dateValue.toDate) {
              // Firestore Timestamp
              input.value = dateValue.toDate().toISOString().slice(0, 10);
            }
          } else {
            input.value = targetData[key] ?? '';
          }
        });

        toggles.forEach((toggle) => {
          const key = toggle.getAttribute('data-toggle');
          if (!key) return;
          toggle.checked = Boolean(targetData[key]);
        });
      }

      function setEditingState(state) {
        isEditing = state;
        profileSection.dataset.editing = state ? 'true' : 'false';
        
        // Actualizar toolbar
        if (toolbar) {
          toolbar.classList.toggle('hidden', !state);
          if (state) {
            toolbar.style.animation = 'fadeIn 0.3s ease-out';
          }
        }
        
        // Actualizar botón de editar
        if (editButton) {
          editButton.dataset.active = state ? 'true' : 'false';
          editButton.classList.toggle('hidden', state);
        }
        
        // Actualizar contenedor del formulario
        const formContainer = profileSection.querySelector('[data-form-container]');
        if (formContainer) {
          formContainer.dataset.editing = state ? 'true' : 'false';
        }
        
        // Actualizar header section
        const headerSection = profileSection.querySelector('[data-header-section]');
        if (headerSection) {
          headerSection.dataset.editing = state ? 'true' : 'false';
        }
        
        // Actualizar icono
        const iconContainer = profileSection.querySelector('[data-icon-container]');
        if (iconContainer) {
          iconContainer.dataset.editing = state ? 'true' : 'false';
        }
        
        // Actualizar títulos y subtítulos
        const subtitles = profileSection.querySelectorAll('[data-subtitle]');
        const titles = profileSection.querySelectorAll('[data-title]');
        
        subtitles.forEach(el => el.dataset.editing = state ? 'true' : 'false');
        titles.forEach(el => el.dataset.editing = state ? 'true' : 'false');
        
          // Actualizar inputs
        inputs?.forEach((input) => {
          input.disabled = !state;
          input.readOnly = !state;
          if (state) {
            input.classList.remove('bg-gray-50', 'border-gray-200');
            input.classList.add('bg-white', 'border-gray-300');
          } else {
            input.classList.remove('bg-white', 'border-gray-300');
            input.classList.add('bg-gray-50', 'border-gray-200');
          }
        });
        
        // Actualizar labels
        const labels = profileSection.querySelectorAll('[data-label]');
        labels.forEach(el => {
          if (state) {
            el.classList.remove('text-gray-600');
            el.classList.add('text-purple-600');
          } else {
            el.classList.remove('text-purple-600');
            el.classList.add('text-gray-600');
          }
        });
        
        toggles.forEach((toggle) => {
          toggle.disabled = !state;
        });
        
        applyValues(state ? tempData : formData);
      }

      function setSavingState(state) {
        isSaving = state;
        profileSection.dataset.saving = state ? 'true' : 'false';
        if (saveButton) {
          saveButton.querySelector('[data-state="idle"]')?.classList.toggle('hidden', state);
          saveButton.querySelector('[data-state="saving"]')?.classList.toggle('hidden', !state);
          saveButton.disabled = state;
        }
      }

      async function loadUser() {
        try {
          // Los datos del usuario ya están cargados por la página principal
          // Intentar obtenerlos desde localStorage primero
          const userStr = localStorage.getItem('user');
          if (userStr) {
            try {
              currentUser = JSON.parse(userStr);
            } catch (e) {
              console.error('Error parsing user from localStorage:', e);
            }
          }

          // Si no hay datos en localStorage, obtenerlos desde Firestore usando userId
          if (!currentUser) {
            // Obtener userId desde localStorage
            let userId = localStorage.getItem('userId');
            
            if (!userId) {
              userId = typeof window !== 'undefined' && window.currentUserId 
                ? window.currentUserId 
                : null;
            }
            
            if (!userId) {
              const profilePanel = document.getElementById('profile-content-panel');
              if (profilePanel) {
                userId = profilePanel.getAttribute('data-user-id');
              }
            }
            
            if (userId) {
              const { getUser } = await import('../../../lib/db/users.js');
              const userResult = await getUser(userId);
              
              if (userResult.data) {
                currentUser = userResult.data;
                localStorage.setItem('user', JSON.stringify(currentUser));
              } else {
                console.error('Error loading user data: No se encontraron datos del usuario');
                return;
              }
            } else {
              console.error('No se pudo obtener userId');
              return;
            }
          }

          // Mapear datos del usuario a formData
          formData = {
            firstName: currentUser.firstName || '',
            lastName: currentUser.lastName || '',
            email: currentUser.email || '',
            phone: currentUser.phone || '',
            birthdate: currentUser.birthdate || '',
            newsletter: currentUser.newsletter || false,
            notifications: currentUser.notifications || false
          };
          
          tempData = { ...formData };
          profileImage = currentUser.avatar || defaultAvatar;
          
          // Sincronizar UI
          syncHeader();
          applyValues(formData);
          
          // Cargar estadísticas
          await loadStats();
        } catch (error) {
          console.error('Error loading user:', error);
        }
      }

      async function persistUser() {
        if (!currentUser) {
          console.error('No hay usuario para actualizar');
          return;
        }

        try {
          // Obtener userId usando la función helper
          // @ts-ignore
          let userId = typeof window !== 'undefined' && window.getUserId 
            ? window.getUserId() 
            : localStorage.getItem('userId');
          
          if (!userId) {
            throw new Error('Usuario no autenticado');
          }
          
          const { isFirebaseStorageUrl, deleteUserAvatar } = await import('../../../lib/utils/storage.js');
          const { updateUser } = await import('../../../lib/db/users.js');
          
          // Si hay un avatar anterior de Firebase Storage y se está cambiando, eliminarlo
          if (currentUser.avatar && 
              isFirebaseStorageUrl(currentUser.avatar) && 
              profileImage !== currentUser.avatar &&
              profileImage !== defaultAvatar &&
              isFirebaseStorageUrl(profileImage)) {
            try {
              await deleteUserAvatar(currentUser.avatar);
            } catch (error) {
              console.warn('No se pudo eliminar el avatar anterior:', error);
              // Continuar de todas formas
            }
          }
          
          // Preparar datos para actualizar
          const updateData = {
            firstName: formData.firstName,
            lastName: formData.lastName,
            phone: formData.phone,
            avatar: profileImage && profileImage !== defaultAvatar && profileImage.trim() !== '' ? profileImage : undefined,
            // Nota: email no se puede cambiar aquí, se maneja en Firebase Auth
            // birthdate, newsletter, notifications se pueden agregar si están en el tipo UpdateUserData
          };

          const result = await updateUser(userId, updateData);
          
          if (!result.success) {
            throw new Error(result.error?.message || 'Error al actualizar el usuario');
          }

          // Actualizar currentUser local
          currentUser = {
            ...currentUser,
            ...formData,
            avatar: profileImage && profileImage !== defaultAvatar ? profileImage : currentUser.avatar
          };
          
          // Actualizar localStorage
          localStorage.setItem('user', JSON.stringify(currentUser));
        } catch (error) {
          console.error('Error saving user:', error);
          throw error;
        }
      }

      async function init() {
        // Deshabilitar inputs mientras se cargan los datos
        inputs?.forEach((input) => {
          input.disabled = true;
        });
        toggles.forEach((toggle) => {
          toggle.disabled = true;
        });
        if (editButton) {
          editButton.disabled = true;
        }
        
        // Mostrar estado de carga en el header
        const nameElements = profileSection.querySelectorAll('[data-text="name"]');
        const emailElements = profileSection.querySelectorAll('[data-text="email"]');
        nameElements.forEach(el => el.textContent = 'Cargando...');
        emailElements.forEach(el => el.textContent = 'Cargando...');
        
        await loadUser();
        
        // Si llegamos aquí, los datos se cargaron correctamente
        // syncHeader y applyValues ya se llamaron en loadUser
        setEditingState(false);
      }

      editButton?.addEventListener('click', () => {
        tempData = { ...formData };
        setEditingState(true);
      });

      cancelButton?.addEventListener('click', () => {
        setEditingState(false);
      });

      saveButton?.addEventListener('click', async () => {
        if (isSaving) return;
        setSavingState(true);
        
        try {
          // Validar datos antes de guardar
          if (!tempData.firstName || !tempData.lastName) {
            alert('Por favor, completa tu nombre y apellido');
            setSavingState(false);
            return;
          }

          if (!tempData.email) {
            alert('Por favor, ingresa tu correo electrónico');
            setSavingState(false);
            return;
          }

          formData = { ...tempData };
          await persistUser();
          syncHeader();
          setEditingState(false);
          setSavingState(false);
          
          // Mostrar notificación de éxito
          const notification = document.createElement('div');
          notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-xl shadow-lg z-50 flex items-center gap-3';
          notification.innerHTML = `
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-semibold">Perfil actualizado exitosamente</span>
          `;
          document.body.appendChild(notification);
          setTimeout(() => notification.remove(), 3000);
        } catch (error) {
          console.error('Error saving:', error);
          const errorMessage = error instanceof Error ? error.message : 'Error desconocido';
          alert(`Error al guardar: ${errorMessage}`);
          setSavingState(false);
        }
      });

      inputs?.forEach((input) => {
        input.addEventListener('input', (event) => {
          if (!isEditing) return;
          const target = event.currentTarget;
          if (!(target instanceof HTMLInputElement)) return;
          const key = target.getAttribute('data-input');
          if (!key) return;
          tempData[key] = target.value;
        });
      });

      toggles.forEach((toggle) => {
        toggle.addEventListener('change', (event) => {
          if (!isEditing) {
            event.preventDefault();
            return;
          }
          const target = event.currentTarget;
          const key = target.getAttribute('data-toggle');
          if (!key) return;
          tempData[key] = target.checked;
        });
      });

      avatarInput?.addEventListener('change', async (event) => {
        const target = event.target;
        if (!(target instanceof HTMLInputElement)) return;
        const file = target.files?.[0];
        if (!file) return;
        
        // Validar tipo de archivo
        if (!['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'].includes(file.type)) {
          alert('Formato de imagen no válido. Usa JPG, PNG, GIF o WEBP.');
          return;
        }
        
        // Validar tamaño
        if (file.size > 5 * 1024 * 1024) {
          alert('La imagen es demasiado grande. Máximo 5 MB.');
          return;
        }

        try {
          // Obtener userId usando la función helper
          // @ts-ignore
          let userId = typeof window !== 'undefined' && window.getUserId 
            ? window.getUserId() 
            : localStorage.getItem('userId');
          
          if (!userId) {
            alert('Debes estar autenticado para subir una imagen');
            return;
          }

          // Mostrar preview inmediato mientras se sube
          const reader = new FileReader();
          reader.onload = () => {
            if (typeof reader.result === 'string') {
              profileImage = reader.result; // Preview temporal
              syncHeader();
            }
          };
          reader.readAsDataURL(file);

          // Subir imagen a Firebase Storage
          const { uploadUserAvatar } = await import('../../../lib/utils/storage.js');
          const uploadResult = await uploadUserAvatar(file, userId);

          if (!uploadResult.success || !uploadResult.url) {
            throw new Error(uploadResult.error?.message || 'Error al subir la imagen');
          }

          // Actualizar con la URL de Firebase Storage
          profileImage = uploadResult.url;
          
          if (isEditing) {
            tempData.avatar = profileImage;
          } else {
            formData.avatar = profileImage;
          }
          
          syncHeader();

          // Mostrar notificación de éxito
          const notification = document.createElement('div');
          notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-xl shadow-lg z-50 flex items-center gap-3 animate-fade-in';
          notification.innerHTML = `
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-semibold">Imagen subida correctamente</span>
          `;
          document.body.appendChild(notification);
          setTimeout(() => {
            notification.classList.add('opacity-0', 'transition-opacity', 'duration-300');
            setTimeout(() => notification.remove(), 300);
          }, 3000);

        } catch (error) {
          console.error('Error uploading avatar:', error);
          const errorMessage = error instanceof Error ? error.message : 'Error desconocido al subir la imagen';
          alert(`Error: ${errorMessage}`);
          
          // Restaurar imagen anterior si hay error
          if (currentUser?.avatar) {
            profileImage = currentUser.avatar;
          } else {
            profileImage = defaultAvatar;
          }
          syncHeader();
        }
      });

      logoutButton?.addEventListener('click', async () => {
        if (confirm('¿Seguro que deseas cerrar sesión?')) {
          try {
            const { logout } = await import('../../../lib/auth.js');
            await logout();
            localStorage.removeItem('user');
            window.location.href = '/';
          } catch (error) {
            console.error('Error al cerrar sesión:', error);
            // Intentar redirigir de todas formas
            localStorage.removeItem('user');
            window.location.href = '/';
          }
        }
      });

      document.addEventListener('DOMContentLoaded', init, { once: true });
      if (document.readyState !== 'loading') {
        init();
      }
    }
  </script>
  
