---
const headerStats = [
  { id: 'orders', label: 'Pedidos', color: 'text-white' },
  { id: 'points', label: 'Puntos', color: 'text-white' },
  { id: 'savedPets', label: 'Mascotas', color: 'text-white' },
  { id: 'memberSince', label: 'Desde', color: 'text-white' }
];
---

<section
  id="profile-info"
  class="space-y-8 w-full bg-transparent"
  data-editing="false"
  data-saving="false"
>
  <!-- Hero / Header -->
  <div class="relative overflow-hidden rounded-3xl bg-linear-to-r from-purple-600 via-pink-500 to-orange-400 p-6 sm:p-8 shadow-2xl shadow-purple-500/20">
    <div class="absolute inset-0 bg-linear-to-r from-white/10 via-transparent to-white/10 opacity-40 animate-pulse"></div>
    <div class="relative flex flex-col gap-6 sm:flex-row sm:items-center">
      <div class="relative mx-auto shrink-0">
        <div class="absolute -inset-1 rounded-full bg-linear-to-r from-fuchsia-500 to-amber-400 blur opacity-70 transition duration-700 group-hover:opacity-100"></div>
        <div class="relative h-32 w-32 overflow-hidden rounded-full border-4 border-white shadow-xl bg-gradient-to-br from-purple-400 to-pink-400">
          <!-- Avatar con imagen o icono por defecto -->
          <div id="profile-avatar-container" class="h-full w-full flex items-center justify-center">
            <img
              id="profile-avatar"
              src=""
              alt="Avatar de usuario"
              class="h-full w-full object-cover hidden"
            />
            <svg
              id="profile-avatar-icon"
              class="h-20 w-20 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <label
            for="profile-avatar-input"
            class="absolute inset-0 flex cursor-pointer items-center justify-center bg-black/60 opacity-0 transition-opacity duration-300 hover:opacity-100"
          >
            <svg class="h-7 w-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16V4h16v16H8l-4 4v-8z" />
            </svg>
            <input
              id="profile-avatar-input"
              type="file"
              accept="image/jpeg,image/png,image/gif"
              class="sr-only"
            />
          </label>
        </div>
      </div>

      <div class="flex-1 text-center text-white sm:text-left">
        <p class="text-sm uppercase tracking-[0.35em] text-white/80">Mi Perfil</p>
        <h1 class="mt-2 text-3xl font-bold leading-tight md:text-4xl" data-text="name">Tu nombre</h1>
        <p class="text-white/90" data-text="email">usuario@demo.com</p>

        <dl class="mt-6 grid grid-cols-2 gap-4 text-left sm:grid-cols-4">
          {headerStats.map((stat) => (
            <div
              class="rounded-2xl bg-white/10 px-4 py-3 text-center shadow-lg backdrop-blur"
              data-stat-card={stat.id}
            >
              <dt class={`text-sm ${stat.color} text-white/80`}>{stat.label}</dt>
              <dd class="text-2xl font-bold text-white" data-stat={stat.id}>0</dd>
            </div>
          ))}
        </dl>
      </div>

      <div class="flex justify-center sm:justify-end">
        <button
          type="button"
          data-action="edit"
          class="group flex items-center gap-2.5 rounded-xl border-2 border-white/50 bg-white/25 px-7 py-3.5 text-white backdrop-blur-md transition-all duration-300 hover:bg-white/40 hover:border-white/70 hover:shadow-xl hover:scale-105 active:scale-95 data-[active=false]:flex data-[active=true]:hidden"
        >
          <svg class="h-5 w-5 transition-transform duration-300 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          <span class="font-semibold">Editar Perfil</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Información personal -->
  <div class="group relative overflow-hidden rounded-3xl bg-white p-6 shadow-xl shadow-purple-100/50 transition-all duration-500 data-[editing=true]:ring-2 data-[editing=true]:ring-purple-300 data-[editing=true]:shadow-2xl data-[editing=true]:shadow-purple-200/60" data-form-container>
    <!-- Indicador de edición -->
    <div class="absolute top-0 right-0 hidden h-2 w-full bg-linear-to-r from-purple-500 via-pink-500 to-orange-400 data-[editing=true]:block animate-pulse"></div>
    
    <div class="flex flex-wrap items-center justify-between gap-4 border-b border-gray-100 pb-6 transition-colors duration-300 data-[editing=true]:border-purple-200" data-header-section>
      <div class="flex items-center gap-3">
        <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-linear-to-br from-purple-500 to-indigo-500 text-white shadow-lg transition-transform duration-300 data-[editing=true]:scale-110 data-[editing=true]:rotate-3" data-icon-container>
          <svg class="h-6 w-6 transition-transform duration-300 data-[editing=true]:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-3.31 0-6 2.69-6 6v2h12v-2c0-3.31-2.69-6-6-6z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-semibold text-gray-500 transition-colors duration-300 data-[editing=true]:text-purple-600" data-subtitle>Datos personales</p>
          <h2 class="text-xl font-bold text-gray-800 transition-colors duration-300 data-[editing=true]:text-purple-700" data-title>Información Personal</h2>
        </div>
      </div>
      <div class="hidden items-center gap-3 data-[editing=true]:flex animate-in fade-in slide-in-from-right-4 duration-300" data-edit-toolbar>
        <button
          type="button"
          data-action="cancel"
          class="group flex items-center gap-2 rounded-xl border-2 border-gray-300 bg-white px-6 py-3 text-gray-700 font-medium transition-all duration-200 hover:border-red-300 hover:bg-red-50 hover:text-red-600 hover:shadow-md active:scale-95"
        >
          <svg class="h-5 w-5 transition-transform duration-200 group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
          </svg>
          <span>Cancelar</span>
        </button>
        <button
          type="button"
          data-action="save"
          class="group relative flex items-center mt-2 gap-2.5 overflow-hidden rounded-xl bg-linear-to-r from-purple-600 via-pink-600 to-purple-600 px-7 py-3 font-semibold text-white transition-all duration-300 hover:shadow-xl hover:shadow-purple-500/40 hover:scale-105 active:scale-95 disabled:opacity-70 disabled:cursor-not-allowed"
        >
          <div class="absolute inset-0 bg-linear-to-r from-purple-400 to-pink-400 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
          <span class="relative flex items-center gap-2.5" data-state="idle">
            <svg class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
            </svg>
            <span>Guardar cambios</span>
          </span>
          <span class="relative hidden items-center gap-3" data-state="saving">
            <span class="inline-block h-5 w-5 animate-spin rounded-full border-2 border-white border-t-transparent"></span>
            <span>Guardando...</span>
          </span>
        </button>
      </div>
    </div>

    <form id="profile-form" class="mt-8 grid grid-cols-1 gap-6 md:grid-cols-2">
      <div class="group space-y-2.5">
        <label class="flex items-center gap-2 text-sm font-semibold text-gray-600 transition-colors duration-300 data-[editing=true]:text-purple-600" data-label>
          <svg class="h-4 w-4 text-gray-400 transition-colors duration-300 data-[editing=true]:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>Nombre</span>
        </label>
        <div class="relative">
          <input
            type="text"
            data-input="firstName"
            class="peer w-full rounded-2xl border-2 border-gray-200 bg-gray-50 px-5 py-3.5 pl-12 text-gray-800 transition-all duration-300 placeholder:text-gray-400 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-4 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
            placeholder="Tu nombre"
          />
          <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 transition-colors duration-300 peer-focus:text-purple-500">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
        </div>
      </div>
      <div class="group space-y-2.5">
        <label class="flex items-center gap-2 text-sm font-semibold text-gray-600 transition-colors duration-300 data-[editing=true]:text-purple-600" data-label>
          <svg class="h-4 w-4 text-gray-400 transition-colors duration-300 data-[editing=true]:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>Apellido</span>
        </label>
        <div class="relative">
          <input
            type="text"
            data-input="lastName"
            class="peer w-full rounded-2xl border-2 border-gray-200 bg-gray-50 px-5 py-3.5 pl-12 text-gray-800 transition-all duration-300 placeholder:text-gray-400 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-4 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
            placeholder="Tu apellido"
          />
          <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 transition-colors duration-300 peer-focus:text-purple-500">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
        </div>
      </div>
      <div class="group space-y-2.5">
        <label class="flex items-center gap-2 text-sm font-semibold text-gray-600 transition-colors duration-300 data-[editing=true]:text-purple-600" data-label>
          <svg class="h-4 w-4 text-gray-400 transition-colors duration-300 data-[editing=true]:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span>Correo electrónico</span>
        </label>
        <div class="relative">
          <input
            type="email"
            data-input="email"
            class="peer w-full rounded-2xl border-2 border-gray-200 bg-gray-50 px-5 py-3.5 pl-12 text-gray-800 transition-all duration-300 placeholder:text-gray-400 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-4 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
            placeholder="correo@ejemplo.com"
          />
          <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 transition-colors duration-300 peer-focus:text-purple-500">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
      </div>
      <div class="group space-y-2.5">
        <label class="flex items-center gap-2 text-sm font-semibold text-gray-600 transition-colors duration-300 data-[editing=true]:text-purple-600" data-label>
          <svg class="h-4 w-4 text-gray-400 transition-colors duration-300 data-[editing=true]:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>Teléfono</span>
        </label>
        <div class="relative">
          <input
            type="tel"
            data-input="phone"
            class="peer w-full rounded-2xl border-2 border-gray-200 bg-gray-50 px-5 py-3.5 pl-12 text-gray-800 transition-all duration-300 placeholder:text-gray-400 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-4 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
            placeholder="+591 71234567"
          />
          <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 transition-colors duration-300 peer-focus:text-purple-500">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
        </div>
      </div>
      <div class="group space-y-2.5">
        <label class="flex items-center gap-2 text-sm font-semibold text-gray-600 transition-colors duration-300 data-[editing=true]:text-purple-600" data-label>
          <svg class="h-4 w-4 text-gray-400 transition-colors duration-300 data-[editing=true]:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>Fecha de nacimiento</span>
        </label>
        <div class="relative">
          <input
            type="date"
            data-input="birthdate"
            class="peer w-full rounded-2xl border-2 border-gray-200 bg-gray-50 px-5 py-3.5 pl-12 text-gray-800 transition-all duration-300 focus:border-purple-400 focus:bg-white focus:outline-none focus:ring-4 focus:ring-purple-100 disabled:cursor-not-allowed disabled:opacity-60"
          />
          <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 transition-colors duration-300 peer-focus:text-purple-500">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
      </div>
    </form>
  </div>

  <!-- Preferencias -->
  <div class="rounded-3xl bg-white p-6 shadow-xl shadow-purple-100/40">
    <div class="flex items-center gap-3 border-b border-gray-100 pb-6">
      <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-linear-to-br from-orange-500 to-pink-500 text-white shadow-lg">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 00-9.33-4.906" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5v6a6 6 0 006 6h.75" />
        </svg>
      </div>
      <div>
        <p class="text-sm font-semibold text-gray-500">Comunicación</p>
        <h2 class="text-xl font-bold text-gray-800">Preferencias</h2>
      </div>
    </div>
    <div class="mt-6 space-y-5">
      <label class="flex flex-wrap items-center justify-between gap-4 rounded-3xl border-2 border-gray-100 p-5 transition hover:border-purple-200 hover:shadow-md">
        <div class="flex items-center gap-4">
          <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-linear-to-br from-blue-100 to-blue-200 text-blue-600">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m8 0a4 4 0 01-8 0m8 0a4 4 0 00-8 0M3 8l9-6 9 6v10a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-gray-800">Newsletter</p>
            <p class="text-sm text-gray-500">Recibe novedades y ofertas exclusivas</p>
          </div>
        </div>
        <div class="relative inline-flex items-center">
          <input
            type="checkbox"
            data-toggle="newsletter"
            class="peer sr-only"
          />
          <div class="h-8 w-14 rounded-full bg-gray-200 transition peer-checked:bg-linear-to-r peer-checked:from-purple-500 peer-checked:to-pink-500"></div>
          <div class="absolute left-1 top-1 h-6 w-6 rounded-full bg-white transition peer-checked:translate-x-6"></div>
        </div>
      </label>
      <label class="flex flex-wrap items-center justify-between gap-4 rounded-3xl border-2 border-gray-100 p-5 transition hover:border-purple-200 hover:shadow-md">
        <div class="flex items-center gap-4">
          <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-linear-to-br from-purple-100 to-pink-200 text-purple-600">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 00-9.33-4.906" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5v6a6 6 0 006 6h.75" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-gray-800">Notificaciones push</p>
            <p class="text-sm text-gray-500">Alertas instantáneas sobre tus pedidos</p>
          </div>
        </div>
        <div class="relative inline-flex items-center">
          <input
            type="checkbox"
            data-toggle="notifications"
            class="peer sr-only"
          />
          <div class="h-8 w-14 rounded-full bg-gray-200 transition peer-checked:bg-linear-to-r peer-checked:from-purple-500 peer-checked:to-pink-500"></div>
          <div class="absolute left-1 top-1 h-6 w-6 rounded-full bg-white transition peer-checked:translate-x-6"></div>
        </div>
      </label>
    </div>
  </div>

  <!-- Acciones rápidas -->
  <div class="grid grid-cols-1 gap-5 md:grid-cols-3">
    <a
      href="/profile/security"
      class="group rounded-3xl bg-linear-to-br from-blue-50 to-indigo-100 p-5 shadow-inner transition hover:-translate-y-1 hover:shadow-lg"
    >
      <div class="flex items-center gap-4">
        <div class="rounded-2xl bg-linear-to-r from-blue-500 to-indigo-600 p-3 text-white shadow-lg transition group-hover:scale-110">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c.552 0 1-.448 1-1V6a1 1 0 10-2 0v4c0 .552.448 1 1 1zm0 3a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 9a7 7 0 0114 0v6a7 7 0 11-14 0V9z" />
          </svg>
        </div>
        <div>
          <p class="text-lg font-bold text-gray-800">Seguridad</p>
          <p class="text-sm text-gray-500">Actualiza tu contraseña</p>
        </div>
      </div>
    </a>
    <a
      href="/profile/favorites"
      class="group rounded-3xl bg-linear-to-br from-pink-50 to-rose-100 p-5 shadow-inner transition hover:-translate-y-1 hover:shadow-lg"
    >
      <div class="flex items-center gap-4">
        <div class="rounded-2xl bg-linear-to-r from-pink-500 to-rose-600 p-3 text-white shadow-lg transition group-hover:scale-110">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636 9.646 5.27a4.5 4.5 0 00-6.328.048z" />
          </svg>
        </div>
        <div>
          <p class="text-lg font-bold text-gray-800">Mis favoritos</p>
          <p class="text-sm text-gray-500">Productos y mascotas guardadas</p>
        </div>
      </div>
    </a>
    <button
      type="button"
      data-action="logout"
      class="group rounded-3xl bg-linear-to-br from-gray-50 to-gray-200 p-5 text-left shadow-inner transition hover:-translate-y-1 hover:shadow-lg"
    >
      <div class="flex items-center gap-4">
        <div class="rounded-2xl bg-linear-to-r from-red-500 to-orange-500 p-3 text-white shadow-lg transition group-hover:scale-110">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        </div>
        <div>
          <p class="text-lg font-bold text-red-600">Cerrar sesión</p>
          <p class="text-sm text-gray-500">Salir de mi cuenta</p>
        </div>
      </div>
    </button>
  </div>

  <script type="module">
    const profileSection = document.getElementById('profile-info');
    if (profileSection) {
      const form = profileSection.querySelector('#profile-form');
      const inputs = form?.querySelectorAll('[data-input]');
      const toggles = profileSection.querySelectorAll('[data-toggle]');
      const statsElements = profileSection.querySelectorAll('[data-stat]');
      const editButton = profileSection.querySelector('[data-action="edit"]');
      const cancelButton = profileSection.querySelector('[data-action="cancel"]');
      const saveButton = profileSection.querySelector('[data-action="save"]');
      const logoutButton = profileSection.querySelector('[data-action="logout"]');
      const toolbar = profileSection.querySelector('[data-edit-toolbar]');
      const avatar = profileSection.querySelector('#profile-avatar');
      const avatarIcon = profileSection.querySelector('#profile-avatar-icon');
      const avatarInput = profileSection.querySelector('#profile-avatar-input');
      const defaultAvatar = '';

      let currentUser = null;
      let formData = {
        firstName: '',
        lastName: '',
        email: '',
        phone: '',
        birthdate: '',
        newsletter: false,
        notifications: false
      };
      let tempData = { ...formData };
      let profileImage = defaultAvatar;
      let isEditing = false;
      let isSaving = false;
      let stats = {
        orders: 0,
        points: 0,
        savedPets: 0,
        memberSince: ''
      };

      async function loadStats() {
        try {
          const { getCurrentUser } = await import('../../../lib/auth');
          const firebaseUser = getCurrentUser();
          if (!firebaseUser) return;

          const { getUserOrders } = await import('../../../lib/db/orders');
          const ordersResult = await getUserOrders(firebaseUser.uid);
          const orders = ordersResult.data || [];

          // Calcular puntos (ejemplo: 10 puntos por pedido)
          const points = orders.length * 10;

          // Obtener fecha de creación del usuario
          let memberSince = '';
          if (currentUser?.createdAt) {
            const createdDate = currentUser.createdAt.toDate 
              ? currentUser.createdAt.toDate() 
              : new Date(currentUser.createdAt);
            memberSince = createdDate.getFullYear().toString();
          }

          stats = {
            orders: orders.length,
            points: points,
            savedPets: 0, // TODO: Implementar cuando haya sistema de mascotas
            memberSince: memberSince || new Date().getFullYear().toString()
          };

          syncStats();
        } catch (error) {
          console.error('Error loading stats:', error);
        }
      }

      function syncStats() {
        statsElements.forEach((el) => {
          const key = el.getAttribute('data-stat');
          if (key && stats[key] !== undefined) {
            el.textContent = stats[key].toString();
          }
        });
      }

      function syncHeader() {
        const fullName = `${formData.firstName || ''} ${formData.lastName || ''}`.trim() || 'Tu nombre';
        profileSection.querySelectorAll('[data-text="name"]').forEach((el) => {
          el.textContent = fullName;
        });
        profileSection.querySelectorAll('[data-text="email"]').forEach((el) => {
          el.textContent = formData.email || 'correo@ejemplo.com';
        });
        
        // Actualizar avatar: mostrar imagen si existe, sino mostrar icono
        if (avatar instanceof HTMLImageElement && avatarIcon instanceof SVGElement) {
          if (profileImage && profileImage !== defaultAvatar && profileImage.trim() !== '') {
            avatar.src = profileImage;
            avatar.classList.remove('hidden');
            avatarIcon.classList.add('hidden');
          } else {
            avatar.classList.add('hidden');
            avatarIcon.classList.remove('hidden');
          }
        }
      }

      function applyValues(targetData) {
        inputs?.forEach((input) => {
          const key = input.getAttribute('data-input');
          if (!key) return;
          
          if (key === 'birthdate' && targetData[key]) {
            const dateValue = targetData[key];
            if (dateValue instanceof Date) {
              input.value = dateValue.toISOString().slice(0, 10);
            } else if (typeof dateValue === 'string') {
              input.value = dateValue.slice(0, 10);
            } else if (dateValue.toDate) {
              // Firestore Timestamp
              input.value = dateValue.toDate().toISOString().slice(0, 10);
            }
          } else {
            input.value = targetData[key] ?? '';
          }
        });

        toggles.forEach((toggle) => {
          const key = toggle.getAttribute('data-toggle');
          if (!key) return;
          toggle.checked = Boolean(targetData[key]);
        });
      }

      function setEditingState(state) {
        isEditing = state;
        profileSection.dataset.editing = state ? 'true' : 'false';
        
        // Actualizar toolbar
        if (toolbar) {
          toolbar.classList.toggle('hidden', !state);
          if (state) {
            toolbar.style.animation = 'fadeIn 0.3s ease-out';
          }
        }
        
        // Actualizar botón de editar
        if (editButton) {
          editButton.dataset.active = state ? 'true' : 'false';
          editButton.classList.toggle('hidden', state);
        }
        
        // Actualizar contenedor del formulario
        const formContainer = profileSection.querySelector('[data-form-container]');
        if (formContainer) {
          formContainer.dataset.editing = state ? 'true' : 'false';
        }
        
        // Actualizar header section
        const headerSection = profileSection.querySelector('[data-header-section]');
        if (headerSection) {
          headerSection.dataset.editing = state ? 'true' : 'false';
        }
        
        // Actualizar icono
        const iconContainer = profileSection.querySelector('[data-icon-container]');
        if (iconContainer) {
          iconContainer.dataset.editing = state ? 'true' : 'false';
        }
        
        // Actualizar títulos y subtítulos
        const subtitles = profileSection.querySelectorAll('[data-subtitle]');
        const titles = profileSection.querySelectorAll('[data-title]');
        const labels = profileSection.querySelectorAll('[data-label]');
        
        subtitles.forEach(el => el.dataset.editing = state ? 'true' : 'false');
        titles.forEach(el => el.dataset.editing = state ? 'true' : 'false');
        labels.forEach(el => el.dataset.editing = state ? 'true' : 'false');
        
        // Actualizar inputs
        inputs?.forEach((input) => {
          input.disabled = !state;
          input.readOnly = !state;
          if (state) {
            input.classList.remove('bg-gray-50', 'border-gray-200');
            input.classList.add('bg-white', 'border-gray-300');
          } else {
            input.classList.remove('bg-white', 'border-gray-300');
            input.classList.add('bg-gray-50', 'border-gray-200');
          }
        });
        
        toggles.forEach((toggle) => {
          toggle.disabled = !state;
        });
        
        applyValues(state ? tempData : formData);
      }

      function setSavingState(state) {
        isSaving = state;
        profileSection.dataset.saving = state ? 'true' : 'false';
        if (saveButton) {
          saveButton.querySelector('[data-state="idle"]')?.classList.toggle('hidden', state);
          saveButton.querySelector('[data-state="saving"]')?.classList.toggle('hidden', !state);
          saveButton.disabled = state;
        }
      }

      async function loadUser() {
        try {
          // Los datos del usuario ya están cargados por la página principal
          // Intentar obtenerlos desde localStorage primero
          const userStr = localStorage.getItem('user');
          if (userStr) {
            try {
              currentUser = JSON.parse(userStr);
            } catch (e) {
              console.error('Error parsing user from localStorage:', e);
            }
          }

          // Si no hay datos en localStorage, obtenerlos desde Firebase
          if (!currentUser) {
            const { getCurrentUserData } = await import('../../../lib/auth');
            const userDataResult = await getCurrentUserData();
            
            if (!userDataResult.success || !userDataResult.user) {
              console.error('Error loading user data:', userDataResult.error);
              return;
            }

            currentUser = userDataResult.user;
            localStorage.setItem('user', JSON.stringify(currentUser));
          }

          // Mapear datos del usuario a formData
          formData = {
            firstName: currentUser.firstName || '',
            lastName: currentUser.lastName || '',
            email: currentUser.email || '',
            phone: currentUser.phone || '',
            birthdate: currentUser.birthdate || '',
            newsletter: currentUser.newsletter || false,
            notifications: currentUser.notifications || false
          };
          
          tempData = { ...formData };
          profileImage = currentUser.avatar || defaultAvatar;
          
          // Sincronizar UI
          syncHeader();
          applyValues(formData);
          
          // Cargar estadísticas
          await loadStats();
        } catch (error) {
          console.error('Error loading user:', error);
        }
      }

      async function persistUser() {
        if (!currentUser) {
          console.error('No hay usuario para actualizar');
          return;
        }

        try {
          const { getCurrentUser } = await import('../../../lib/auth');
          const firebaseUser = getCurrentUser();
          if (!firebaseUser) {
            throw new Error('Usuario no autenticado');
          }

          const { updateUser } = await import('../../../lib/db/users');
          
          // Preparar datos para actualizar
          const updateData = {
            firstName: formData.firstName,
            lastName: formData.lastName,
            phone: formData.phone,
            avatar: profileImage !== defaultAvatar ? profileImage : undefined,
            // Nota: email no se puede cambiar aquí, se maneja en Firebase Auth
            // birthdate, newsletter, notifications se pueden agregar si están en el tipo UpdateUserData
          };

          const result = await updateUser(firebaseUser.uid, updateData);
          
          if (!result.success) {
            throw new Error(result.error?.message || 'Error al actualizar el usuario');
          }

          // Actualizar currentUser local
          currentUser = {
            ...currentUser,
            ...formData,
            avatar: profileImage
          };
        } catch (error) {
          console.error('Error saving user:', error);
          throw error;
        }
      }

      async function init() {
        // Deshabilitar inputs mientras se cargan los datos
        inputs?.forEach((input) => {
          input.disabled = true;
        });
        toggles.forEach((toggle) => {
          toggle.disabled = true;
        });
        if (editButton) {
          editButton.disabled = true;
        }
        
        // Mostrar estado de carga en el header
        const nameElements = profileSection.querySelectorAll('[data-text="name"]');
        const emailElements = profileSection.querySelectorAll('[data-text="email"]');
        nameElements.forEach(el => el.textContent = 'Cargando...');
        emailElements.forEach(el => el.textContent = 'Cargando...');
        
        await loadUser();
        
        // Si llegamos aquí, los datos se cargaron correctamente
        // syncHeader y applyValues ya se llamaron en loadUser
        setEditingState(false);
      }

      editButton?.addEventListener('click', () => {
        tempData = { ...formData };
        setEditingState(true);
      });

      cancelButton?.addEventListener('click', () => {
        setEditingState(false);
      });

      saveButton?.addEventListener('click', async () => {
        if (isSaving) return;
        setSavingState(true);
        
        try {
          // Validar datos antes de guardar
          if (!tempData.firstName || !tempData.lastName) {
            alert('Por favor, completa tu nombre y apellido');
            setSavingState(false);
            return;
          }

          if (!tempData.email) {
            alert('Por favor, ingresa tu correo electrónico');
            setSavingState(false);
            return;
          }

          formData = { ...tempData };
          await persistUser();
          syncHeader();
          setEditingState(false);
          setSavingState(false);
          
          // Mostrar notificación de éxito
          const notification = document.createElement('div');
          notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-xl shadow-lg z-50 flex items-center gap-3';
          notification.innerHTML = `
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-semibold">Perfil actualizado exitosamente</span>
          `;
          document.body.appendChild(notification);
          setTimeout(() => notification.remove(), 3000);
        } catch (error) {
          console.error('Error saving:', error);
          const errorMessage = error instanceof Error ? error.message : 'Error desconocido';
          alert(`Error al guardar: ${errorMessage}`);
          setSavingState(false);
        }
      });

      inputs?.forEach((input) => {
        input.addEventListener('input', (event) => {
          if (!isEditing) return;
          const target = event.currentTarget;
          if (!(target instanceof HTMLInputElement)) return;
          const key = target.getAttribute('data-input');
          if (!key) return;
          tempData[key] = target.value;
        });
      });

      toggles.forEach((toggle) => {
        toggle.addEventListener('change', (event) => {
          if (!isEditing) {
            event.preventDefault();
            return;
          }
          const target = event.currentTarget;
          const key = target.getAttribute('data-toggle');
          if (!key) return;
          tempData[key] = target.checked;
        });
      });

      avatarInput?.addEventListener('change', (event) => {
        const file = event.target.files?.[0];
        if (!file) return;
        if (!['image/jpeg', 'image/png', 'image/gif'].includes(file.type)) {
          alert('Formato de imagen no válido. Usa JPG, PNG o GIF.');
          return;
        }
        if (file.size > 5 * 1024 * 1024) {
          alert('La imagen es demasiado grande. Máximo 5 MB.');
          return;
        }
        const reader = new FileReader();
        reader.onload = () => {
          profileImage = reader.result;
          if (isEditing) {
            tempData.avatar = profileImage;
          } else {
            formData.avatar = profileImage;
          }
          syncHeader();
        };
        reader.readAsDataURL(file);
      });

      logoutButton?.addEventListener('click', async () => {
        if (confirm('¿Seguro que deseas cerrar sesión?')) {
          try {
            const { logout } = await import('../../../lib/auth');
            await logout();
            localStorage.removeItem('user');
            window.location.href = '/';
          } catch (error) {
            console.error('Error al cerrar sesión:', error);
            // Intentar redirigir de todas formas
            localStorage.removeItem('user');
            window.location.href = '/';
          }
        }
      });

      document.addEventListener('DOMContentLoaded', init, { once: true });
      if (document.readyState !== 'loading') {
        init();
      }
    }
  </script>
  
