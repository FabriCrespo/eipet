---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-linear-to-br from-purple-50 via-white to-pink-50">
    <div class="max-w-md w-full">
      <!-- Logo y Título -->
      <div class="text-center mb-8">
        <a href="/" class="inline-flex items-center gap-3 mb-4">
          <div class="bg-[#ffff11] rounded-xl p-2.5 shadow-lg">
            <svg width="36" height="36" viewBox="0 0 32 32" fill="none">
              <path d="M16 8C16 8 10 2 4 8C-2 14 4 20 4 20L16 28L28 20C28 20 34 14 28 8C22 2 16 8 16 8Z" fill="#5d3fbb"/>
              <circle cx="10" cy="12" r="2" fill="#fff"/>
              <circle cx="22" cy="12" r="2" fill="#fff"/>
              <path d="M16 18C16 18 14 20 10 20C6 20 4 18 4 18" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
              <path d="M16 18C16 18 18 20 22 20C26 20 28 18 28 18" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <span class="text-3xl font-bold text-[#5d3fbb]">eipet</span>
        </a>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Bienvenido de nuevo</h1>
        <p class="text-gray-600">Inicia sesión en tu cuenta para continuar</p>
      </div>

      <!-- Formulario -->
      <div class="bg-white rounded-3xl shadow-2xl p-8 border border-gray-100">
        <form id="login-form" class="space-y-6">
          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Correo Electrónico
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              autocomplete="email"
              class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 bg-white text-gray-800 placeholder-gray-400 focus:border-purple-400 focus:outline-none focus:ring-4 focus:ring-purple-100 transition-all"
              placeholder="tu@email.com"
            />
          </div>

          <!-- Contraseña -->
          <div>
            <div class="flex items-center justify-between mb-2">
              <label for="password" class="block text-sm font-semibold text-gray-700">
                Contraseña
              </label>
              <a href="/forgot-password" class="text-sm text-purple-600 hover:text-purple-700 font-medium">
                ¿Olvidaste tu contraseña?
              </a>
            </div>
            <div class="relative">
              <input
                type="password"
                id="password"
                name="password"
                required
                autocomplete="current-password"
                class="w-full px-4 py-3 pr-12 rounded-xl border-2 border-gray-200 bg-white text-gray-800 placeholder-gray-400 focus:border-purple-400 focus:outline-none focus:ring-4 focus:ring-purple-100 transition-all"
                placeholder="••••••••"
              />
              <button
                type="button"
                id="toggle-password"
                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors"
                aria-label="Mostrar/Ocultar contraseña"
              >
                <svg id="eye-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <svg id="eye-off-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                </svg>
              </button>
            </div>
          </div>

          <!-- Recordar sesión -->
          <div class="flex items-center">
            <input
              type="checkbox"
              id="remember"
              name="remember"
              class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500"
            />
            <label for="remember" class="ml-2 text-sm text-gray-700">
              Recordar sesión
            </label>
          </div>

          <!-- Mensaje de error -->
          <div id="error-message" class="hidden bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl text-sm">
            <p id="error-text"></p>
          </div>

          <!-- Botón de envío -->
          <button
            type="submit"
            class="w-full flex items-center justify-center gap-2 px-6 py-4 bg-linear-to-r from-purple-500 to-pink-500 text-white font-semibold rounded-xl hover:shadow-lg transition-all duration-300 hover:scale-[1.02] active:scale-95"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            <span>Iniciar Sesión</span>
          </button>
        </form>

        <!-- Divider -->
        <div class="my-6 flex items-center">
          <div class="flex-1 border-t border-gray-200"></div>
          <span class="px-4 text-sm text-gray-500">o</span>
          <div class="flex-1 border-t border-gray-200"></div>
        </div>

        <!-- Botones de autenticación social -->
        <div class="space-y-3">
          <button
            type="button"
            id="google-login-btn"
            class="w-full flex items-center justify-center gap-3 px-6 py-3 bg-white border-2 border-gray-200 text-gray-700 font-semibold rounded-xl hover:bg-gray-50 hover:border-gray-300 transition-all duration-200"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Continuar con Google</span>
          </button>

          <button
            type="button"
            id="facebook-login-btn"
            class="w-full flex items-center justify-center gap-3 px-6 py-3 bg-[#1877F2] text-white font-semibold rounded-xl hover:bg-[#166FE5] transition-all duration-200"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            <span>Continuar con Facebook</span>
          </button>
        </div>

        <!-- Divider -->
        <div class="my-6 flex items-center">
          <div class="flex-1 border-t border-gray-200"></div>
          <span class="px-4 text-sm text-gray-500">o</span>
          <div class="flex-1 border-t border-gray-200"></div>
        </div>

        <!-- Registro -->
        <div class="text-center">
          <p class="text-sm text-gray-600">
            ¿No tienes una cuenta?{' '}
            <a href="/signup" class="text-purple-600 hover:text-purple-700 font-semibold">
              Regístrate aquí
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Toggle password visibility
    const togglePassword = document.getElementById('toggle-password');
    const passwordInput = document.getElementById('password') as HTMLInputElement;
    const eyeIcon = document.getElementById('eye-icon');
    const eyeOffIcon = document.getElementById('eye-off-icon');

    togglePassword?.addEventListener('click', () => {
      const isPassword = passwordInput?.type === 'password';
      if (passwordInput) {
        passwordInput.type = isPassword ? 'text' : 'password';
      }
      if (eyeIcon && eyeOffIcon) {
        eyeIcon.classList.toggle('hidden', !isPassword);
        eyeOffIcon.classList.toggle('hidden', isPassword);
      }
    });

    // Form submission
    const loginForm = document.getElementById('login-form');
    const errorMessage = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');
    const submitButton = loginForm?.querySelector('button[type="submit"]') as HTMLButtonElement;

    loginForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const email = (document.getElementById('email') as HTMLInputElement)?.value.trim().toLowerCase();
      const password = (document.getElementById('password') as HTMLInputElement)?.value;
      const remember = (document.getElementById('remember') as HTMLInputElement)?.checked;

      // Hide error message
      if (errorMessage) errorMessage.classList.add('hidden');

      // Basic validation
      if (!email || !password) {
        showError('Por favor, completa todos los campos');
        return;
      }

      // Validar formato de email
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        showError('Por favor, ingresa un correo electrónico válido');
        return;
      }

      // Deshabilitar botón durante el proceso
      if (submitButton) {
        submitButton.disabled = true;
        submitButton.innerHTML = `
          <svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          <span>Iniciando sesión...</span>
        `;
      }

      try {
        // Importar función de login
        const { login, getCurrentUserData } = await import('../lib/auth');
        
        // Iniciar sesión con Firebase
        const result = await login(email, password);

        if (!result.success) {
          showError(result.error || 'Error al iniciar sesión. Por favor, intenta de nuevo.');
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.innerHTML = `
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              <span>Iniciar Sesión</span>
            `;
          }
          return;
        }

        // Obtener datos completos del usuario desde Firestore
        const userDataResult = await getCurrentUserData();

        if (!userDataResult.success || !userDataResult.user) {
          showError('Error al obtener los datos del usuario. Por favor, intenta de nuevo.');
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.innerHTML = `
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              <span>Iniciar Sesión</span>
            `;
          }
          return;
        }

        // Guardar datos del usuario en localStorage (opcional, para compatibilidad)
        localStorage.setItem('user', JSON.stringify(userDataResult.user));

        // Redirigir según el rol del usuario
        const redirectParam = new URLSearchParams(window.location.search).get('redirect');
        const redirectTo = redirectParam || 
          (userDataResult.user.role === 'admin' ? '/admin/dashboard' : '/profile');
        
        window.location.href = redirectTo;
      } catch (error: any) {
        console.error('Login error:', error);
        showError(error.message || 'Error al iniciar sesión. Por favor, intenta de nuevo.');
        
        if (submitButton) {
          submitButton.disabled = false;
          submitButton.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            <span>Iniciar Sesión</span>
          `;
        }
      }
    });

    function showError(message: string) {
      if (errorText) errorText.textContent = message;
      if (errorMessage) errorMessage.classList.remove('hidden');
      // Scroll to error message
      errorMessage?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    // Autenticación con Google
    const googleLoginBtn = document.getElementById('google-login-btn') as HTMLButtonElement;
    googleLoginBtn?.addEventListener('click', async () => {
      try {
        googleLoginBtn.disabled = true;
        googleLoginBtn.innerHTML = `
          <svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          <span>Procesando...</span>
        `;

        const { loginWithGoogle, getCurrentUserData } = await import('../lib/auth');
        const result = await loginWithGoogle();

        if (!result.success) {
          showError(result.error || 'Error al iniciar sesión con Google.');
          googleLoginBtn.disabled = false;
          googleLoginBtn.innerHTML = `
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Continuar con Google</span>
          `;
          return;
        }

        const userDataResult = await getCurrentUserData();
        if (!userDataResult.success || !userDataResult.user) {
          showError('Error al obtener los datos del usuario. Por favor, intenta de nuevo.');
          googleLoginBtn.disabled = false;
          googleLoginBtn.innerHTML = `
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Continuar con Google</span>
          `;
          return;
        }

        localStorage.setItem('user', JSON.stringify(userDataResult.user));

        const redirectParam = new URLSearchParams(window.location.search).get('redirect');
        const redirectTo = redirectParam || 
          (userDataResult.user.role === 'admin' ? '/admin/dashboard' : '/profile');
        
        window.location.href = redirectTo;
      } catch (error: any) {
        console.error('Google login error:', error);
        showError(error.message || 'Error al iniciar sesión con Google.');
        googleLoginBtn.disabled = false;
        googleLoginBtn.innerHTML = `
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <span>Continuar con Google</span>
        `;
      }
    });

    // Autenticación con Facebook
    const facebookLoginBtn = document.getElementById('facebook-login-btn') as HTMLButtonElement;
    facebookLoginBtn?.addEventListener('click', async () => {
      try {
        facebookLoginBtn.disabled = true;
        facebookLoginBtn.innerHTML = `
          <svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          <span>Procesando...</span>
        `;

        const { loginWithFacebook, getCurrentUserData } = await import('../lib/auth');
        const result = await loginWithFacebook();

        if (!result.success) {
          showError(result.error || 'Error al iniciar sesión con Facebook.');
          facebookLoginBtn.disabled = false;
          facebookLoginBtn.innerHTML = `
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            <span>Continuar con Facebook</span>
          `;
          return;
        }

        const userDataResult = await getCurrentUserData();
        if (!userDataResult.success || !userDataResult.user) {
          showError('Error al obtener los datos del usuario. Por favor, intenta de nuevo.');
          facebookLoginBtn.disabled = false;
          facebookLoginBtn.innerHTML = `
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            <span>Continuar con Facebook</span>
          `;
          return;
        }

        localStorage.setItem('user', JSON.stringify(userDataResult.user));

        const redirectParam = new URLSearchParams(window.location.search).get('redirect');
        const redirectTo = redirectParam || 
          (userDataResult.user.role === 'admin' ? '/admin/dashboard' : '/profile');
        
        window.location.href = redirectTo;
      } catch (error: any) {
        console.error('Facebook login error:', error);
        showError(error.message || 'Error al iniciar sesión con Facebook.');
        facebookLoginBtn.disabled = false;
        facebookLoginBtn.innerHTML = `
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          <span>Continuar con Facebook</span>
        `;
      }
    });

    // Check if already logged in
    document.addEventListener('DOMContentLoaded', async () => {
      try {
        const { getCurrentUser } = await import('../lib/auth');
        const currentUser = getCurrentUser();
        if (currentUser) {
          const { getCurrentUserData } = await import('../lib/auth');
          const userDataResult = await getCurrentUserData();
          if (userDataResult.success && userDataResult.user) {
            const redirectParam = new URLSearchParams(window.location.search).get('redirect');
            const redirectTo = redirectParam || 
              (userDataResult.user.role === 'admin' ? '/admin/dashboard' : '/profile');
            window.location.href = redirectTo;
          }
        }
      } catch (error) {
        console.error('Error checking auth state:', error);
      }
    });
  </script>
