          if (smsError) smsError.classList.add('hidden');
        }, 3000);
        resendSmsCodeBtn.disabled = false;
        resendSmsCodeBtn.textContent = 'Reenviar código';
      } catch (error: any) {
        console.error('SMS resend error:', error);
        showSMSError(error.message || 'Error al reenviar el código.');
        resendSmsCodeBtn.disabled = false;
        resendSmsCodeBtn.textContent = 'Reenviar código';
      }
    });

    function showSMSError(message: string) {
      if (smsErrorText) smsErrorText.textContent = message;
      if (smsError) smsError.classList.remove('hidden');
    }

