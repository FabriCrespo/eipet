    const smsPhoneStep = document.getElementById('sms-phone-step');
    const smsCodeStep = document.getElementById('sms-code-step');
    const sendSmsCodeBtn = document.getElementById('send-sms-code-btn') as HTMLButtonElement;
    const verifySmsCodeBtn = document.getElementById('verify-sms-code-btn') as HTMLButtonElement;
    const resendSmsCodeBtn = document.getElementById('resend-sms-code-btn') as HTMLButtonElement;
    const smsError = document.getElementById('sms-error');
    const smsErrorText = document.getElementById('sms-error-text');
    const recaptchaContainer = document.getElementById('recaptcha-container');

    // Abrir modal SMS
    const smsSignupBtn = document.getElementById('sms-signup-btn') as HTMLButtonElement;
    smsSignupBtn?.addEventListener('click', async () => {
      if (smsModal) {
        smsModal.classList.remove('hidden');
        
        // Inicializar reCAPTCHA
        try {
          const { RecaptchaVerifier } = await import('firebase/auth');
          const { auth } = await import('../lib/firebase');
          
          if (recaptchaContainer) {
            recaptchaContainer.innerHTML = '';
            recaptchaVerifier = new RecaptchaVerifier(auth, recaptchaContainer, {
              size: 'normal',
              callback: () => {
                // reCAPTCHA resuelto
              },
              'expired-callback': () => {
                showSMSError('El reCAPTCHA ha expirado. Por favor, recarga la página.');
              }
            });
            await recaptchaVerifier.render();
          }
        } catch (error) {
          console.error('Error initializing reCAPTCHA:', error);
          showSMSError('Error al inicializar la verificación. Por favor, recarga la página.');
        }
      }
    });

    // Cerrar modal SMS
