          showSMSError(result.error || 'Error al reenviar el código.');
          resendSmsCodeBtn.disabled = false;
          resendSmsCodeBtn.textContent = 'Reenviar código';
          return;
        }

        confirmationResult = result.confirmationResult;
        showSMSError('Código reenviado. Por favor, revisa tu teléfono.');
