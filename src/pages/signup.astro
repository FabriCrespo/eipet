      const phoneInput = document.getElementById('sms-phone') as HTMLInputElement;
      const phoneNumber = phoneInput?.value.trim();

      if (!phoneNumber) {
        showSMSError('Por favor, ingresa un número de teléfono.');
        return;
      }

