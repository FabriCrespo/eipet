---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/homepage/Hero.astro';
import Categories from '../components/homepage/Categories.astro';
import BestSellers from '../components/homepage/BestSellers.astro';
import TopCategories from '../components/homepage/TopCategories.astro';
import '../styles/global.css';
---

<Layout>
  <Hero />
  <Categories />
  <BestSellers />
  <TopCategories />

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fadeIn 0.8s ease-out;
    }
  </style>
</Layout>
