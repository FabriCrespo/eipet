                <p class="text-xs sm:text-sm text-gray-600">Lun-Vie 9:00-18:00</p>
              </div>
            </div>

            <!-- Contact Form -->
            <form id="contact-form" class="bg-white rounded-2xl p-6 sm:p-8 shadow-lg border border-gray-100">
