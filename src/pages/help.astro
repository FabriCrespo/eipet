    function getColorClasses(color: string) {
      const colors: Record<string, string> = {
        blue: 'bg-blue-100 text-blue-600',
        green: 'bg-green-100 text-green-600',
        purple: 'bg-purple-100 text-purple-600',
        orange: 'bg-orange-100 text-orange-600',
        pink: 'bg-pink-100 text-pink-600',
        red: 'bg-red-100 text-red-600'
      };
      return colors[color] || 'bg-gray-100 text-gray-600';
    }

    function updateSearchResultsCount() {
      const countEl = document.getElementById('search-results-count');
      if (!countEl) return;
      
      if (searchQuery === '') {
        countEl.classList.add('hidden');
        return;
      }

      const categoriesCount = helpCategories.filter(cat =>
        cat.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
        cat.description.toLowerCase().includes(searchQuery.toLowerCase())
      ).length;

      const faqsCount = faqs.filter(faq =>
        faq.question.toLowerCase().includes(searchQuery.toLowerCase()) ||
        faq.answer.toLowerCase().includes(searchQuery.toLowerCase())
      ).length;

      const total = categoriesCount + faqsCount;
      const span = countEl.querySelector('span');
      if (span) {
        span.textContent = `${total} resultado${total !== 1 ? 's' : ''}`;
      }
      countEl.classList.remove('hidden');
    }

    function renderPopularTopics() {
      const container = document.getElementById('popular-topics-container');
      if (!container) return;

      container.innerHTML = popularTopics.map(topic => `
        <button
          type="button"
          class="popular-topic bg-white border-2 border-gray-200 rounded-xl px-4 py-2.5 sm:px-5 sm:py-3 hover:border-purple-400 hover:bg-purple-50 transition-all duration-200 group flex items-center gap-2 sm:gap-3"
          data-topic="${topic.title.toLowerCase()}"
        >
          <span class="text-sm sm:text-base font-medium text-gray-700 group-hover:text-purple-700">${topic.title}</span>
          <span class="text-xs text-gray-400 bg-gray-100 group-hover:bg-purple-100 group-hover:text-purple-600 px-2 py-0.5 rounded-full transition-colors">${topic.count}</span>
        </button>
      `).join('');

      document.querySelectorAll('.popular-topic').forEach(btn => {
        btn.addEventListener('click', () => {
          const topic = btn.getAttribute('data-topic');
          if (topic) {
            const input = document.getElementById('search-input') as HTMLInputElement;
            if (input) {
              input.value = topic;
              searchQuery = topic;
              updateSearchResultsCount();
              renderCategories();
              renderFAQs();
              input.focus();
            }
          }
        });
      });
    }

    function renderCategories() {
      const container = document.getElementById('categories-container');
      const noResults = document.getElementById('no-categories-message');
      const countEl = document.getElementById('categories-count');
      if (!container) return;

      const filtered = helpCategories.filter(cat =>
        searchQuery === '' ||
        cat.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
        cat.description.toLowerCase().includes(searchQuery.toLowerCase()) ||
        cat.articles.some(article => article.toLowerCase().includes(searchQuery.toLowerCase()))
      );

      if (countEl) {
        countEl.textContent = `${filtered.length} categoría${filtered.length !== 1 ? 's' : ''}`;
      }

      if (filtered.length === 0) {
        container.classList.add('hidden');
        if (noResults) noResults.classList.remove('hidden');
        return;
      }

      container.classList.remove('hidden');
      if (noResults) noResults.classList.add('hidden');

      container.innerHTML = filtered.map(category => `
        <div
          class="category-card bg-white border-2 border-gray-200 rounded-2xl p-5 sm:p-6 hover:shadow-xl hover:border-purple-300 transition-all duration-300 cursor-pointer transform hover:-translate-y-1"
          data-category-id="${category.id}"
        >
          <div class="flex items-start gap-4">
            <div class="p-3 sm:p-4 ${getColorClasses(category.color)} rounded-xl shrink-0">
              <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${category.icon}" />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-bold text-gray-900 mb-2 text-lg sm:text-xl">${category.title}</h3>
              <p class="text-sm sm:text-base text-gray-600 mb-4">${category.description}</p>
              <ul class="space-y-2">
                ${category.articles.map(article => `
                  <li class="text-sm sm:text-base text-purple-600 hover:text-purple-700 hover:underline flex items-center gap-2 group/item">
                    <svg class="w-4 h-4 text-purple-400 group-hover/item:text-purple-600 transition-colors shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
