      // Funci√≥n para filtrar productos
      function filterProducts() {
        let products = [...allProducts];

        // B√∫squeda por texto (nombre, marca, descripci√≥n)
        if (searchQuery.trim()) {
          const query = searchQuery.toLowerCase().trim();
          products = products.filter(p => {
            const name = (p.name || '').toLowerCase();
            const brand = (p.brand || '').toLowerCase();
            const description = (p.description || '').toLowerCase();
            return name.includes(query) || brand.includes(query) || description.includes(query);
          });
        }

        // Filtro por pet (categor√≠a)
        if (petFilter !== 'all') {
          products = products.filter(p => p.category === petFilter);
        }

        // Filtro por tipo (discount/new)
        if (filterType === 'discount') {
          products = products.filter(p => (p.discount || 0) > 0);
        } else if (filterType === 'new') {
          // Simular productos nuevos (√∫ltimos 5)
          products = products.slice(-5);
        }

        // Filtros del sidebar
          const typeCheckboxes = document.querySelectorAll('#type-filter-content input:checked');
          if (typeCheckboxes.length > 0) {
            const types = Array.from(typeCheckboxes).map(cb => (cb as HTMLInputElement).value);
          products = products.filter(p => types.includes(p.type));
          }

          const lifeStageCheckboxes = document.querySelectorAll('#life-stage-filter-content input:checked');
          if (lifeStageCheckboxes.length > 0) {
            const stages = Array.from(lifeStageCheckboxes).map(cb => (cb as HTMLInputElement).value);
          products = products.filter(p => stages.includes(p.lifeStage || ''));
          }

          const breedSizeCheckboxes = document.querySelectorAll('#breed-size-filter-content input:checked');
          if (breedSizeCheckboxes.length > 0) {
            const sizes = Array.from(breedSizeCheckboxes).map(cb => (cb as HTMLInputElement).value);
          products = products.filter(p => {
            const breedSize = p.breedSize || '';
            return sizes.includes(breedSize) || (breedSize === 'todos' && sizes.includes('todos'));
          });
          }

          const priceCheckboxes = document.querySelectorAll('#price-filter-content input:checked');
          if (priceCheckboxes.length > 0) {
            const priceRanges = Array.from(priceCheckboxes).map(cb => (cb as HTMLInputElement).value);
          products = products.filter(p => {
            return priceRanges.some(range => {
              if (range === '300+') return p.price >= 300;
              const [min, max] = range.split('-').map(Number);
              return p.price >= min && p.price < max;
            });
          });
        }

        filteredProducts = products;
        renderProducts(filteredProducts);
        updateActiveFiltersChips();
      }

      // Funci√≥n para ordenar productos
      function sortProducts(sortValue: string) {
        const sorted = [...filteredProducts];

        switch(sortValue) {
          case 'price-low':
            sorted.sort((a, b) => a.price - b.price);
            break;
          case 'price-high':
            sorted.sort((a, b) => b.price - a.price);
            break;
          case 'discount':
            sorted.sort((a, b) => (b.discount || 0) - (a.discount || 0));
            break;
          default:
            // Mantener orden original
            break;
        }

        renderProducts(sorted);
      }

