                  ${product.lifeStage ? `
                    <div class="bg-gray-50 rounded p-1.5 sm:p-2.5">
                      <p class="text-xs text-gray-500 mb-0.5">Etapa</p>
                      <p class="text-xs sm:text-sm font-semibold text-gray-900">${getLifeStageLabel(product.lifeStage)}</p>
                    </div>
                  ` : ''}
                  ${product.breedSize ? `
                    <div class="bg-gray-50 rounded p-1.5 sm:p-2.5">
                      <p class="text-xs text-gray-500 mb-0.5">Tama침o</p>
                      <p class="text-xs sm:text-sm font-semibold text-gray-900">${getBreedSizeLabel(product.breedSize)}</p>
                    </div>
                  ` : ''}
                  ${product.weight ? `
                    <div class="bg-gray-50 rounded p-1.5 sm:p-2.5">
                      <p class="text-xs text-gray-500 mb-0.5">Peso</p>
                      <p class="text-xs sm:text-sm font-semibold text-gray-900">${product.weight}</p>
