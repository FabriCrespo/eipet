              <div class="mt-auto space-y-1.5 sm:space-y-2.5 pt-2 sm:pt-4 border-t border-gray-200">
                <button
                  type="button"
                  class="add-to-cart-btn w-full bg-[#5d3fbb] hover:bg-[#6d4fcc] text-white font-semibold sm:font-bold py-2 sm:py-3 px-3 sm:px-5 rounded-lg sm:rounded-xl transition-all duration-300 flex items-center justify-center gap-1.5 sm:gap-2 hover:scale-105 active:scale-95 text-xs sm:text-base"
                  data-product-id="${product.id}"
                >
                  <svg class="w-3.5 h-3.5 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                  <span class="hidden sm:inline">Agregar al Carrito</span>
                  <span class="sm:hidden">Agregar</span>
                </button>
                <button
                  type="button"
                  class="favorite-modal-btn w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-1.5 sm:py-2.5 px-3 sm:px-5 rounded-lg sm:rounded-xl transition-all duration-300 flex items-center justify-center gap-1.5 sm:gap-2 text-xs sm:text-base"
                  data-product-id="${product.id}"
                >
                  <svg class="w-3.5 h-3.5 sm:w-5 sm:h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                  <span class="hidden sm:inline">Agregar a Favoritos</span>
                  <span class="sm:hidden">Favoritos</span>
                </button>
              </div>
            </div>
          </div>
        `;

        // Agregar event listeners a los botones del modal
        const addToCartBtn = productModalContent.querySelector('.add-to-cart-btn');
        const favoriteModalBtn = productModalContent.querySelector('.favorite-modal-btn');

        addToCartBtn?.addEventListener('click', () => {
          console.log('Agregar al carrito:', product.id);
          // Aqu칤 puedes agregar la l칩gica para agregar al carrito
        });

        favoriteModalBtn?.addEventListener('click', () => {
          console.log('Agregar a favoritos:', product.id);
          // Aqu칤 puedes agregar la l칩gica para favoritos
        });

        // Mostrar modal
        productModal.classList.remove('hidden');
        productModal.classList.add('flex');
        productModal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
      }

      function closeProductModal() {
        if (!productModal) return;
        productModal.classList.add('hidden');
        productModal.classList.remove('flex');
        productModal.style.display = 'none';
        document.body.style.overflow = '';
      }

      // Event listeners para cerrar el modal
      if (closeProductModalBtn) {
        closeProductModalBtn.addEventListener('click', closeProductModal);
      }

      if (productModal) {
        productModal.addEventListener('click', (e) => {
          if (e.target === productModal) {
            closeProductModal();
          }
        });
      }

      // Cerrar modal con ESC
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && productModal && !productModal.classList.contains('hidden')) {
          closeProductModal();
        }
      });

      // Inicializar
      loadProducts();
      
      // Inicializar contador de filtros activos
      updateActiveFiltersCount();
      
      // Inicializar chips de filtros (se actualizar치n despu칠s de cargar productos)
      updateActiveFiltersChips();
    }
  </script>
