                <!-- Precio -->
                <div class="flex items-center gap-1.5 sm:gap-3 mb-2 sm:mb-4 flex-wrap">
                  <p class="text-xl sm:text-3xl font-bold text-[#5d3fbb]">Bs. ${product.price.toLocaleString()}</p>
                  ${product.originalPrice ? `
                    <div class="flex flex-col">
                      <p class="text-sm sm:text-lg text-gray-400 line-through">Bs. ${product.originalPrice.toLocaleString()}</p>
                      ${product.discount > 0 ? `
                        <p class="text-xs text-green-600 font-semibold hidden sm:block">Ahorras Bs. ${(product.originalPrice - product.price).toLocaleString()}</p>
                      ` : ''}
