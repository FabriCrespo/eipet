---
import Layout from '../../layouts/Layout.astro';
import CategoriaModal from '../../components/CategoriaModal.astro';
---

<Layout>
  <section class="py-8 lg:py-12 bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
          <div>
            <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-2">Gestión de Categorías</h1>
            <p class="text-gray-600">Administra las categorías de productos</p>
          </div>
          <div class="flex gap-2">
            <button
              type="button"
              id="new-category-btn"
              class="px-6 py-3 bg-purple-600 text-white font-semibold rounded-xl hover:bg-purple-700 hover:shadow-lg transition-all duration-300 flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              <span>Nueva Categoría</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Tabla de Categorías -->
      <div class="bg-white rounded-3xl border border-gray-200 shadow-md overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">Imagen</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">Nombre</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">Tipo de Animal</th>
                <th class="text-right py-4 px-6 text-sm font-semibold text-gray-700">Acciones</th>
              </tr>
            </thead>
            <tbody id="categories-tbody">
              <tr>
                <td colspan="4" class="py-8 px-6 text-center text-gray-500">
                  <p class="mb-2">No hay categorías registradas</p>
                  <p class="text-sm">Crea tu primera categoría usando el botón "Nueva Categoría"</p>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <CategoriaModal />

  <script>
    (function() {
      // Esperar a que el DOM esté completamente listo
      function init() {
        // Datos mock por ahora (sin backend)
        let categoriesData: any[] = [];

        const categoriesTbody = document.getElementById('categories-tbody');
        const newCategoryBtn = document.getElementById('new-category-btn');

      // Función para renderizar la tabla
      function renderCategories() {
        if (!categoriesTbody) return;

        if (categoriesData.length === 0) {
          categoriesTbody.innerHTML = `
            <tr>
              <td colspan="4" class="py-8 px-6 text-center text-gray-500">
                <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                <p class="text-lg font-semibold mb-2">No hay categorías registradas</p>
                <p class="text-sm">Crea tu primera categoría usando el botón "Nueva Categoría"</p>
              </td>
            </tr>
          `;
          return;
        }

        categoriesTbody.innerHTML = categoriesData.map((category) => {
          const animalTypeColors: { [key: string]: string } = {
            'Perro': 'bg-blue-100 text-blue-700',
            'Gato': 'bg-pink-100 text-pink-700',
            'Otro': 'bg-gray-100 text-gray-700'
          };
          const animalColor = animalTypeColors[category.animalType] || animalTypeColors['Otro'];

          return `
            <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
              <td class="py-4 px-6">
                <div class="w-16 h-16 rounded-lg overflow-hidden bg-gray-100 flex items-center justify-center">
                  ${category.image 
                    ? `<img src="${category.image}" alt="${category.name}" class="w-full h-full object-cover" />`
                    : `<svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                      </svg>`
                  }
                </div>
              </td>
              <td class="py-4 px-6">
                <p class="font-semibold text-gray-900">${category.name || 'Sin nombre'}</p>
              </td>
              <td class="py-4 px-6">
                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium ${animalColor}">
                  ${category.animalType || 'N/A'}
                </span>
              </td>
              <td class="py-4 px-6 text-right">
                <div class="flex items-center justify-end gap-2">
                  <button
                    type="button"
                    data-category-id="${category.id}"
                    class="edit-category-btn p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
                    title="Editar"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </button>
                  <button
                    type="button"
                    data-category-id="${category.id}"
                    data-category-name="${category.name}"
                    class="delete-category-btn p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                    title="Eliminar"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  </button>
                </div>
              </td>
            </tr>
          `;
        }).join('');

        // Re-asignar event listeners
        attachEventListeners();
      }

      // Función para asignar event listeners
      function attachEventListeners() {
        // Botones editar
        document.querySelectorAll('.edit-category-btn').forEach((btn) => {
          btn.addEventListener('click', () => {
            const categoryId = btn.getAttribute('data-category-id');
            const category = categoriesData.find((c: any) => c.id === categoryId);
            if (category && (window as any).openEditCategoryModal) {
              (window as any).openEditCategoryModal(category);
            }
          });
        });

        // Botones eliminar
        document.querySelectorAll('.delete-category-btn').forEach((btn) => {
          btn.addEventListener('click', () => {
            const categoryId = btn.getAttribute('data-category-id');
            const categoryName = btn.getAttribute('data-category-name');
            if (confirm(`¿Estás seguro de que deseas eliminar "${categoryName}"?`)) {
              categoriesData = categoriesData.filter((c: any) => c.id !== categoryId);
              renderCategories();
            }
          });
        });
      }

      // Escuchar evento del formulario del modal
      document.addEventListener('categoryFormSubmit', (e: any) => {
        const formData = e.detail;
        
        // Generar ID si es nueva categoría
        if (!formData.id) {
          formData.id = 'cat_' + Date.now();
        }

        // Si hay imagen desde archivo, convertir a URL base64 para preview
        if (formData.imageFile) {
          const reader = new FileReader();
          reader.onload = (event: ProgressEvent<FileReader>) => {
            if (event.target && event.target.result) {
              formData.image = event.target.result as string;
              
              // Buscar si existe la categoría para actualizar o crear nueva
              const existingIndex = categoriesData.findIndex((c: any) => c.id === formData.id);
              const categoryData = {
                id: formData.id,
                name: formData.name,
                animalType: formData.animalType,
                image: formData.image
              };

              if (existingIndex >= 0) {
                categoriesData[existingIndex] = categoryData;
              } else {
                categoriesData.push(categoryData);
              }
              
              renderCategories();
            }
          };
          reader.readAsDataURL(formData.imageFile);
        } else {
          // Sin archivo, usar URL o imagen existente
          const existingIndex = categoriesData.findIndex((c: any) => c.id === formData.id);
          const categoryData = {
            id: formData.id,
            name: formData.name,
            animalType: formData.animalType,
            image: formData.image || ''
          };

          if (existingIndex >= 0) {
            categoriesData[existingIndex] = categoryData;
          } else {
            categoriesData.push(categoryData);
          }
          
          renderCategories();
        }
      });

        // Renderizar inicialmente
        renderCategories();

        // Botón nueva categoría - asignar listener directamente
        if (newCategoryBtn) {
          newCategoryBtn.addEventListener('click', () => {
            // Esperar un momento para asegurar que el modal esté inicializado
            setTimeout(() => {
              if ((window as any).openCategoryModal) {
                (window as any).openCategoryModal();
              } else {
                console.error('openCategoryModal no está disponible');
              }
            }, 100);
          });
        }
      }

      // Inicializar cuando el DOM esté listo
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
      } else {
        init();
      }
    })();
  </script>
</Layout>
