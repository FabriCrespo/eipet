---
import Layout from '../../layouts/Layout.astro';

// Funciones helper
function formatCurrency(value: number): string {
  return value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ',');
}

function formatNumber(value: number): string {
  return value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
}

const stats = {
  totalReturns: 0,
  pendingReturns: 0,
  approvedReturns: 0,
  processingReturns: 0,
  completedReturns: 0,
  rejectedReturns: 0,
  totalRefundAmount: 0
};
---

<Layout>
  <section class="py-8 lg:py-12 bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <!-- Header -->
      <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-2">Gestión de Devoluciones</h1>
          <p class="text-gray-600">Administra todas las devoluciones de la plataforma</p>
        </div>
        <a
          href="/admin/dashboard"
          class="px-6 py-3 bg-gray-600 text-white font-semibold rounded-xl hover:bg-gray-700 hover:shadow-lg transition-all duration-300 flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          <span>Volver al Dashboard</span>
        </a>
      </div>

      <!-- Estadísticas -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Devoluciones -->
        <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-xl bg-purple-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-600">Total Devoluciones</p>
              <p class="text-2xl font-bold text-gray-900" id="total-returns">{formatNumber(stats.totalReturns)}</p>
            </div>
          </div>
        </div>

        <!-- Pendientes -->
        <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-xl bg-yellow-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-600">Pendientes</p>
              <p class="text-2xl font-bold text-gray-900" id="pending-returns">{formatNumber(stats.pendingReturns)}</p>
            </div>
          </div>
        </div>

        <!-- Aprobadas -->
        <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-xl bg-green-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-600">Aprobadas</p>
              <p class="text-2xl font-bold text-gray-900" id="approved-returns">{formatNumber(stats.approvedReturns)}</p>
            </div>
          </div>
        </div>

        <!-- Monto Total Reembolsos -->
        <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-xl bg-blue-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-600">Monto Total</p>
              <p class="text-2xl font-bold text-gray-900" id="total-refund">Bs. {formatCurrency(stats.totalRefundAmount)}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Filtros y Búsqueda -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm mb-8">
        <div class="flex flex-col lg:flex-row gap-4">
          <!-- Búsqueda -->
          <div class="flex-1 relative">
            <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <input
              type="text"
              id="search-input"
              placeholder="Buscar por ID de devolución, pedido o producto..."
              class="w-full pl-12 pr-4 py-3 rounded-xl border-2 border-gray-200 bg-white text-gray-800 placeholder-gray-400 focus:border-purple-400 focus:outline-none focus:ring-4 focus:ring-purple-100 transition-all"
            />
          </div>

          <!-- Filtro por Estado -->
          <div class="lg:w-48">
            <select
              id="status-filter"
              class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 bg-white text-gray-800 focus:border-purple-400 focus:outline-none focus:ring-4 focus:ring-purple-100 transition-all"
            >
              <option value="all">Todos los estados</option>
              <option value="pending">Pendiente</option>
              <option value="approved">Aprobada</option>
              <option value="rejected">Rechazada</option>
              <option value="processing">Procesando</option>
              <option value="completed">Completada</option>
              <option value="cancelled">Cancelada</option>
            </select>
          </div>

          <!-- Filtro por Fecha -->
          <div class="lg:w-48">
            <select
              id="date-filter"
              class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 bg-white text-gray-800 focus:border-purple-400 focus:outline-none focus:ring-4 focus:ring-purple-100 transition-all"
            >
              <option value="all">Todas las fechas</option>
              <option value="today">Hoy</option>
              <option value="week">Esta semana</option>
              <option value="month">Este mes</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Tabla de Devoluciones -->
      <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">ID Devolución</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">Pedido</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">Producto</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">Fecha</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">Monto</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-gray-700">Estado</th>
                <th class="text-right py-4 px-6 text-sm font-semibold text-gray-700">Acciones</th>
              </tr>
            </thead>
            <tbody id="returns-table-body">
              <!-- Las devoluciones se cargarán aquí dinámicamente -->
            </tbody>
          </table>
        </div>

        <!-- Loading State -->
        <div id="returns-loading" class="text-center py-16">
          <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-purple-500"></div>
          <p class="mt-4 text-gray-600">Cargando devoluciones...</p>
        </div>

        <!-- Empty State -->
        <div id="returns-empty" class="hidden text-center py-16">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          <p class="text-gray-600 text-lg font-medium">No se encontraron devoluciones</p>
          <p class="text-gray-500 text-sm mt-2">Intenta ajustar los filtros de búsqueda</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Modal de Detalles de Devolución -->
  <div id="return-details-modal" class="fixed inset-0 bg-black/50 z-50 hidden items-center justify-center p-4" style="display: none;">
    <div class="bg-white rounded-3xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
      <!-- Header -->
      <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between">
        <h2 class="text-2xl font-bold text-gray-900">Detalles de la Devolución</h2>
        <button
          type="button"
          id="close-return-modal-btn"
          class="p-2 hover:bg-gray-100 rounded-lg transition-colors"
          aria-label="Cerrar"
        >
          <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Contenido -->
      <div id="return-details-content" class="p-6 space-y-6">
        <!-- Se cargará dinámicamente -->
      </div>
    </div>
  </div>

  <!-- Modal de Actualizar Estado -->
  <div id="update-status-modal" class="fixed inset-0 bg-black/50 z-50 hidden items-center justify-center p-4" style="display: none;">
    <div class="bg-white rounded-3xl shadow-2xl max-w-md w-full p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-gray-900">Actualizar Estado</h2>
        <button
          type="button"
          id="close-status-modal-btn"
          class="p-2 hover:bg-gray-100 rounded-lg transition-colors"
          aria-label="Cerrar"
        >
          <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Nuevo Estado</label>
          <select
            id="new-status-select"
            class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 bg-white text-gray-800 focus:border-purple-400 focus:outline-none focus:ring-4 focus:ring-purple-100 transition-all"
          >
            <option value="pending">Pendiente</option>
            <option value="approved">Aprobada</option>
            <option value="rejected">Rechazada</option>
            <option value="processing">Procesando</option>
            <option value="completed">Completada</option>
            <option value="cancelled">Cancelada</option>
          </select>
        </div>
        
        <div id="refund-amount-container" class="hidden">
          <label class="block text-sm font-semibold text-gray-700 mb-2">Monto de Reembolso (Bs.)</label>
          <input
            type="number"
            id="refund-amount-input"
            step="0.01"
            min="0"
            placeholder="0.00"
            class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 bg-white text-gray-800 focus:border-purple-400 focus:outline-none focus:ring-4 focus:ring-purple-100 transition-all"
          />
        </div>

        <div class="flex gap-3 pt-4">
          <button
            type="button"
            id="cancel-status-btn"
            class="flex-1 px-4 py-3 bg-gray-100 text-gray-700 font-semibold rounded-xl hover:bg-gray-200 transition-colors"
          >
            Cancelar
          </button>
          <button
            type="button"
            id="confirm-status-btn"
            class="flex-1 px-4 py-3 bg-purple-600 text-white font-semibold rounded-xl hover:bg-purple-700 transition-colors"
          >
            Actualizar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    (async () => {
      // Dynamic imports
      const { getAllReturns, getReturnById, updateReturnStatus, updateReturn } = await import('../../lib/db/returns');
      const { getUser } = await import('../../lib/db/users');
      const { getCurrentUser, getCurrentUserData } = await import('../../lib/auth');
      
      // Check if user is admin
      const firebaseUser = getCurrentUser();
      if (!firebaseUser) {
        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
        return;
      }
      
      const userDataResult = await getCurrentUserData();
      if (!userDataResult.success || !userDataResult.user || userDataResult.user.role !== 'admin') {
        alert('No tienes permisos para acceder a esta página');
        window.location.href = '/';
        return;
      }
      
      let allReturns: any[] = [];
      let filteredReturns: any[] = [];
      let usersCache: Map<string, any> = new Map();
      let currentReturnId: string | null = null;
      
      // DOM elements
      const tableBody = document.getElementById('returns-table-body');
      const loadingEl = document.getElementById('returns-loading');
      const emptyEl = document.getElementById('returns-empty');
      const searchInput = document.getElementById('search-input') as HTMLInputElement;
      const statusFilter = document.getElementById('status-filter') as HTMLSelectElement;
      const dateFilter = document.getElementById('date-filter') as HTMLSelectElement;
      const returnDetailsModal = document.getElementById('return-details-modal');
      const updateStatusModal = document.getElementById('update-status-modal');
      const closeReturnModalBtn = document.getElementById('close-return-modal-btn');
      const closeStatusModalBtn = document.getElementById('close-status-modal-btn');
      const cancelStatusBtn = document.getElementById('cancel-status-btn');
      const confirmStatusBtn = document.getElementById('confirm-status-btn');
      const newStatusSelect = document.getElementById('new-status-select') as HTMLSelectElement;
      const refundAmountContainer = document.getElementById('refund-amount-container');
      const refundAmountInput = document.getElementById('refund-amount-input') as HTMLInputElement;
      
      // Load returns
      async function loadReturns() {
        if (!getAllReturns) return;
        
        try {
          const result = await getAllReturns();
          
          if (result.error) {
            console.error('Error loading returns:', result.error);
            if (loadingEl) loadingEl.classList.add('hidden');
            return;
          }
          
          allReturns = result.data || [];
          
          // Load user data for each return
          for (const returnItem of allReturns) {
            if (!usersCache.has(returnItem.userId)) {
              try {
                const userResult = await getUser(returnItem.userId);
                if (userResult.data) {
                  usersCache.set(returnItem.userId, userResult.data);
                }
              } catch (error) {
                console.error(`Error loading user ${returnItem.userId}:`, error);
              }
            }
          }
          
          applyFilters();
          updateStats();
        } catch (error) {
          console.error('Error loading returns:', error);
          if (loadingEl) loadingEl.classList.add('hidden');
        }
      }
      
      // Apply filters
      function applyFilters() {
        const searchValue = searchInput?.value.toLowerCase() || '';
        const statusValue = statusFilter?.value || 'all';
        const dateValue = dateFilter?.value || 'all';
        
        filteredReturns = allReturns.filter((returnItem: any) => {
          // Search filter
          if (searchValue) {
            const searchInId = returnItem.id?.toLowerCase().includes(searchValue);
            const searchInOrderId = returnItem.orderId?.toLowerCase().includes(searchValue);
            const searchInProductName = returnItem.productName?.toLowerCase().includes(searchValue);
            const user = usersCache.get(returnItem.userId);
            const searchInUserName = user?.firstName?.toLowerCase().includes(searchValue) || 
                                   user?.lastName?.toLowerCase().includes(searchValue) ||
                                   user?.email?.toLowerCase().includes(searchValue);
            
            if (!searchInId && !searchInOrderId && !searchInProductName && !searchInUserName) {
              return false;
            }
          }
          
          // Status filter
          if (statusValue !== 'all' && returnItem.status !== statusValue) {
            return false;
          }
          
          // Date filter
          if (dateValue !== 'all') {
            const now = new Date();
            const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
            const weekAgo = new Date(today);
            weekAgo.setDate(weekAgo.getDate() - 7);
            const monthAgo = new Date(today);
            monthAgo.setMonth(monthAgo.getMonth() - 1);
            
            const returnDate = returnItem.createdAt?.toDate ? returnItem.createdAt.toDate() : new Date(returnItem.createdAt || 0);
            
            if (dateValue === 'today') {
              if (returnDate < today) return false;
            } else if (dateValue === 'week') {
              if (returnDate < weekAgo) return false;
            } else if (dateValue === 'month') {
              if (returnDate < monthAgo) return false;
            }
          }
          
          return true;
        });
        
        renderReturns();
      }
      
      // Update stats
      function updateStats() {
        const totalReturns = allReturns.length;
        const pendingReturns = allReturns.filter((r: any) => r.status === 'pending').length;
        const approvedReturns = allReturns.filter((r: any) => r.status === 'approved').length;
        const processingReturns = allReturns.filter((r: any) => r.status === 'processing').length;
        const completedReturns = allReturns.filter((r: any) => r.status === 'completed').length;
        const rejectedReturns = allReturns.filter((r: any) => r.status === 'rejected').length;
        const totalRefundAmount = allReturns
          .filter((r: any) => r.status === 'completed' || r.status === 'approved' || r.status === 'processing')
          .reduce((sum: number, r: any) => sum + (r.refundAmount || 0), 0);
        
        const totalEl = document.getElementById('total-returns');
        const pendingEl = document.getElementById('pending-returns');
        const approvedEl = document.getElementById('approved-returns');
        const refundEl = document.getElementById('total-refund');
        
        if (totalEl) totalEl.textContent = totalReturns.toString();
        if (pendingEl) pendingEl.textContent = pendingReturns.toString();
        if (approvedEl) approvedEl.textContent = approvedReturns.toString();
        if (refundEl) refundEl.textContent = `Bs. ${totalRefundAmount.toFixed(2)}`;
      }
      
      // Render returns
      function renderReturns() {
        if (!tableBody) return;
        
        if (filteredReturns.length === 0) {
          if (loadingEl) loadingEl.classList.add('hidden');
          if (emptyEl) emptyEl.classList.remove('hidden');
          tableBody.innerHTML = '';
          return;
        }
        
        if (loadingEl) loadingEl.classList.add('hidden');
        if (emptyEl) emptyEl.classList.add('hidden');
        
        const statusMap: any = {
          'pending': { text: 'Pendiente', color: 'bg-yellow-50 text-yellow-700 border border-yellow-200' },
          'approved': { text: 'Aprobada', color: 'bg-green-50 text-green-700 border border-green-200' },
          'rejected': { text: 'Rechazada', color: 'bg-red-50 text-red-700 border border-red-200' },
          'processing': { text: 'Procesando', color: 'bg-blue-50 text-blue-700 border border-blue-200' },
          'completed': { text: 'Completada', color: 'bg-purple-50 text-purple-700 border border-purple-200' },
          'cancelled': { text: 'Cancelada', color: 'bg-gray-50 text-gray-700 border border-gray-200' }
        };
        
        tableBody.innerHTML = filteredReturns.map((returnItem: any) => {
          const returnDate = returnItem.createdAt?.toDate ? returnItem.createdAt.toDate() : new Date(returnItem.createdAt || Date.now());
          const formattedDate = new Intl.DateTimeFormat('es-ES', {
            day: 'numeric',
            month: 'short',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }).format(returnDate);
          
          const statusInfo = statusMap[returnItem.status] || { text: returnItem.status, color: 'bg-gray-50 text-gray-700 border border-gray-200' };
          const user = usersCache.get(returnItem.userId);
          const userName = user ? `${user.firstName || ''} ${user.lastName || ''}`.trim() : 'Usuario';
          
          return `
            <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
              <td class="py-4 px-6">
                <span class="font-semibold text-gray-900">#${returnItem.id}</span>
              </td>
              <td class="py-4 px-6">
                <p class="text-gray-900">#${returnItem.orderId}</p>
                <p class="text-xs text-gray-500">${userName}</p>
              </td>
              <td class="py-4 px-6">
                <p class="text-gray-900">${returnItem.productName || 'Producto'}</p>
                <p class="text-xs text-gray-500">Cantidad: ${returnItem.quantity || 1}</p>
              </td>
              <td class="py-4 px-6">
                <p class="text-sm text-gray-600">${formattedDate}</p>
              </td>
              <td class="py-4 px-6">
                <span class="font-semibold text-gray-900">Bs. ${(returnItem.refundAmount || 0).toFixed(2)}</span>
              </td>
              <td class="py-4 px-6">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${statusInfo.color}">
                  ${statusInfo.text}
                </span>
              </td>
              <td class="py-4 px-6 text-right">
                <div class="flex items-center justify-end gap-2">
                  <button
                    type="button"
                    class="view-return-btn px-3 py-1.5 bg-purple-100 text-purple-700 rounded-lg hover:bg-purple-200 transition-colors text-sm font-medium"
                    data-return-id="${returnItem.id}"
                  >
                    Ver
                  </button>
                  <button
                    type="button"
                    class="update-status-btn px-3 py-1.5 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors text-sm font-medium"
                    data-return-id="${returnItem.id}"
                  >
                    Actualizar
                  </button>
                </div>
              </td>
            </tr>
          `;
        }).join('');
        
        attachEventListeners();
      }
      
      // Show return details
      async function showReturnDetails(returnId: string) {
        if (!getReturnById) return;
        
        try {
          const result = await getReturnById(returnId);
          if (!result.data) {
            alert('Error: No se pudo obtener la información de la devolución');
            return;
          }
          
          const returnItem = result.data;
          const user = usersCache.get(returnItem.userId) || await getUser(returnItem.userId).then(r => r.data).catch(() => null);
          if (user) {
            usersCache.set(returnItem.userId, user);
          }
          
          const returnDate = returnItem.createdAt?.toDate ? returnItem.createdAt.toDate() : new Date(returnItem.createdAt || Date.now());
          const formattedDate = new Intl.DateTimeFormat('es-ES', {
            day: 'numeric',
            month: 'long',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }).format(returnDate);
          
          const statusMap: any = {
            'pending': { text: 'Pendiente', color: 'bg-yellow-50 text-yellow-700 border border-yellow-200' },
            'approved': { text: 'Aprobada', color: 'bg-green-50 text-green-700 border border-green-200' },
            'rejected': { text: 'Rechazada', color: 'bg-red-50 text-red-700 border border-red-200' },
            'processing': { text: 'Procesando', color: 'bg-blue-50 text-blue-700 border border-blue-200' },
            'completed': { text: 'Completada', color: 'bg-purple-50 text-purple-700 border border-purple-200' },
            'cancelled': { text: 'Cancelada', color: 'bg-gray-50 text-gray-700 border border-gray-200' }
          };
          
          const statusInfo = statusMap[returnItem.status] || { text: returnItem.status, color: 'bg-gray-50 text-gray-700 border border-gray-200' };
          const userName = user ? `${user.firstName || ''} ${user.lastName || ''}`.trim() : 'Usuario';
          
          const reasonMap: any = {
            'defective': 'Producto defectuoso',
            'wrong_item': 'Pedido incorrecto',
            'damaged': 'Producto dañado',
            'not_as_described': 'No coincide con la descripción',
            'other': 'Otro'
          };
          
          const contentEl = document.getElementById('return-details-content');
          if (!contentEl) return;
          
          contentEl.innerHTML = `
            <!-- Información de la Devolución -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pb-6 border-b border-gray-200">
              <div>
                <h3 class="text-sm font-semibold text-gray-700 mb-2">Información de la Devolución</h3>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600">ID:</span>
                    <span class="font-medium text-gray-900">#${returnItem.id}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Fecha:</span>
                    <span class="font-medium text-gray-900">${formattedDate}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Estado:</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${statusInfo.color}">
                      ${statusInfo.text}
                    </span>
                  </div>
                </div>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-gray-700 mb-2">Cliente</h3>
                <div class="space-y-2 text-sm">
                  <p class="font-medium text-gray-900">${userName}</p>
                  <p class="text-gray-600">${user?.email || ''}</p>
                  <p class="text-gray-600">Pedido: #${returnItem.orderId}</p>
                </div>
              </div>
            </div>
            
            <!-- Producto -->
            <div>
              <h3 class="text-sm font-semibold text-gray-700 mb-4">Producto a Devolver</h3>
              <div class="flex gap-4 p-4 bg-gray-50 rounded-xl">
                <img src="${returnItem.productImage || 'https://via.placeholder.com/80'}" alt="${returnItem.productName}" class="w-20 h-20 rounded-lg object-cover border border-gray-200" />
                <div class="flex-1">
                  <h4 class="font-semibold text-gray-900">${returnItem.productName}</h4>
                  <p class="text-sm text-gray-600">Cantidad: ${returnItem.quantity || 1}</p>
                </div>
              </div>
            </div>
            
            <!-- Motivo y Descripción -->
            <div>
              <h3 class="text-sm font-semibold text-gray-700 mb-4">Motivo de Devolución</h3>
              <div class="p-4 bg-gray-50 rounded-xl">
                <p class="font-medium text-gray-900 mb-2">${reasonMap[returnItem.reason] || returnItem.reason}</p>
                <p class="text-sm text-gray-600">${returnItem.description || 'Sin descripción'}</p>
              </div>
            </div>
            
            <!-- Información de Reembolso -->
            <div>
              <h3 class="text-sm font-semibold text-gray-700 mb-4">Información de Reembolso</h3>
              <div class="p-4 bg-gray-50 rounded-xl space-y-2">
                <div class="flex justify-between">
                  <span class="text-gray-600">Monto:</span>
                  <span class="font-semibold text-gray-900">Bs. ${(returnItem.refundAmount || 0).toFixed(2)}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Método:</span>
                  <span class="font-medium text-gray-900">${returnItem.refundMethod === 'card' ? 'Tarjeta' : returnItem.refundMethod === 'transfer' ? 'Transferencia' : 'Efectivo'}</span>
                </div>
              </div>
            </div>
            
            <!-- Timeline -->
            <div>
              <h3 class="text-sm font-semibold text-gray-700 mb-4">Historial</h3>
              <div class="space-y-3">
                ${returnItem.timeline?.map((item: any) => `
                  <div class="flex gap-4 ${item.completed ? '' : 'opacity-60'}">
                    <div class="flex flex-col items-center">
                      <div class="w-3 h-3 rounded-full ${item.completed ? 'bg-green-500' : 'bg-gray-300'}"></div>
                      ${item.completed ? '' : '<div class="w-0.5 h-full bg-gray-300"></div>'}
                    </div>
                    <div class="flex-1 pb-4">
                      <p class="font-medium text-gray-900">${item.status}</p>
                      ${item.date ? `<p class="text-xs text-gray-500">${item.date} ${item.time}</p>` : ''}
                    </div>
                  </div>
                `).join('') || '<p class="text-gray-600">No hay historial disponible</p>'}
              </div>
            </div>
          `;
          
          if (returnDetailsModal) {
            returnDetailsModal.classList.remove('hidden');
            returnDetailsModal.classList.add('flex');
            returnDetailsModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
          }
        } catch (error) {
          console.error('Error loading return details:', error);
          alert('Error al cargar los detalles de la devolución');
        }
      }
      
      // Open update status modal
      function openUpdateStatusModal(returnId: string) {
        currentReturnId = returnId;
        const returnItem = allReturns.find((r: any) => r.id === returnId);
        if (returnItem && newStatusSelect && updateStatusModal) {
          newStatusSelect.value = returnItem.status;
          
          // Show/hide refund amount field
          if (refundAmountContainer && refundAmountInput) {
            if (returnItem.status === 'approved' || returnItem.status === 'processing' || returnItem.status === 'completed') {
              refundAmountContainer.classList.remove('hidden');
              refundAmountInput.value = returnItem.refundAmount?.toString() || '';
            } else {
              refundAmountContainer.classList.add('hidden');
              refundAmountInput.value = '';
            }
          }
          
          updateStatusModal.classList.remove('hidden');
          updateStatusModal.classList.add('flex');
          updateStatusModal.style.display = 'flex';
          document.body.style.overflow = 'hidden';
        }
      }
      
      // Update status
      async function updateStatus() {
        if (!currentReturnId || !newStatusSelect) return;
        
        const newStatus = newStatusSelect.value;
        const refundAmount = refundAmountInput?.value ? parseFloat(refundAmountInput.value) : undefined;
        
        try {
          if (refundAmount !== undefined && (newStatus === 'approved' || newStatus === 'processing' || newStatus === 'completed')) {
            const result = await updateReturn(currentReturnId, {
              status: newStatus as any,
              refundAmount: refundAmount
            });
            if (result.success) {
              alert('Estado y monto de reembolso actualizados exitosamente');
              if (updateStatusModal) {
                updateStatusModal.classList.add('hidden');
                updateStatusModal.classList.remove('flex');
                updateStatusModal.style.display = 'none';
              }
              document.body.style.overflow = '';
              await loadReturns();
            } else {
              alert('Error al actualizar: ' + (result.error?.message || 'Error desconocido'));
            }
          } else {
            const result = await updateReturnStatus(currentReturnId, newStatus as any);
            if (result.success) {
              alert('Estado actualizado exitosamente');
              if (updateStatusModal) {
                updateStatusModal.classList.add('hidden');
                updateStatusModal.classList.remove('flex');
                updateStatusModal.style.display = 'none';
              }
              document.body.style.overflow = '';
              await loadReturns();
            } else {
              alert('Error al actualizar el estado: ' + (result.error?.message || 'Error desconocido'));
            }
          }
        } catch (error) {
          console.error('Error updating status:', error);
          alert('Error al actualizar el estado');
        }
      }
      
      // Close modals
      function closeModals() {
        if (returnDetailsModal) {
          returnDetailsModal.classList.add('hidden');
          returnDetailsModal.classList.remove('flex');
          returnDetailsModal.style.display = 'none';
        }
        if (updateStatusModal) {
          updateStatusModal.classList.add('hidden');
          updateStatusModal.classList.remove('flex');
          updateStatusModal.style.display = 'none';
        }
        document.body.style.overflow = '';
      }
      
      // Attach event listeners
      function attachEventListeners() {
        document.querySelectorAll('.view-return-btn').forEach(btn => {
          btn.addEventListener('click', (e) => {
            const returnId = (e.currentTarget as HTMLElement).getAttribute('data-return-id');
            if (returnId) showReturnDetails(returnId);
          });
        });
        
        document.querySelectorAll('.update-status-btn').forEach(btn => {
          btn.addEventListener('click', (e) => {
            const returnId = (e.currentTarget as HTMLElement).getAttribute('data-return-id');
            if (returnId) openUpdateStatusModal(returnId);
          });
        });
      }
      
      // Event listeners
      if (searchInput) {
        searchInput.addEventListener('input', applyFilters);
      }
      
      if (statusFilter) {
        statusFilter.addEventListener('change', applyFilters);
      }
      
      if (dateFilter) {
        dateFilter.addEventListener('change', applyFilters);
      }
      
      if (closeReturnModalBtn) {
        closeReturnModalBtn.addEventListener('click', closeModals);
      }
      
      if (closeStatusModalBtn) {
        closeStatusModalBtn.addEventListener('click', closeModals);
      }
      
      if (cancelStatusBtn) {
        cancelStatusBtn.addEventListener('click', closeModals);
      }
      
      if (confirmStatusBtn) {
        confirmStatusBtn.addEventListener('click', updateStatus);
      }
      
      // Show/hide refund amount field based on status
      if (newStatusSelect && refundAmountContainer) {
        newStatusSelect.addEventListener('change', () => {
          const selectedStatus = newStatusSelect.value;
          if (refundAmountContainer) {
            if (selectedStatus === 'approved' || selectedStatus === 'processing' || selectedStatus === 'completed') {
              refundAmountContainer.classList.remove('hidden');
            } else {
              refundAmountContainer.classList.add('hidden');
            }
          }
        });
      }
      
      // Close modals on outside click
      if (returnDetailsModal) {
        returnDetailsModal.addEventListener('click', (e) => {
          if (e.target === returnDetailsModal) closeModals();
        });
      }
      
      if (updateStatusModal) {
        updateStatusModal.addEventListener('click', (e) => {
          if (e.target === updateStatusModal) closeModals();
        });
      }
      
      // Load returns on page load
      await loadReturns();
    })();
  </script>
</Layout>

