---
import Layout from '../../layouts/Layout.astro';

// Funciones helper para formatear números
function formatCurrency(value: number): string {
  return value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ',');
}

function formatNumber(value: number): string {
  return value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
}

// Datos de ejemplo - en producción vendrían de una API
const stats = {
  totalSales: 45280.50,
  totalOrders: 1247,
  totalUsers: 3421,
  totalProducts: 156,
  pendingOrders: 23,
  lowStock: 8,
  todaySales: 3240.00,
  todayOrders: 18
};

const recentOrders = [
  {
    id: '12389',
    customer: 'María González',
    date: '25 de enero, 14:30',
    total: 156.80,
    status: 'Pendiente',
    statusColor: 'bg-yellow-50 text-yellow-700 border border-yellow-200'
  },
  {
    id: '12388',
    customer: 'Juan Pérez',
    date: '25 de enero, 13:15',
    total: 342.90,
    status: 'Procesando',
    statusColor: 'bg-blue-50 text-blue-700 border border-blue-200'
  },
  {
    id: '12387',
    customer: 'Ana Martínez',
    date: '25 de enero, 12:00',
    total: 89.50,
    status: 'En camino',
    statusColor: 'bg-purple-50 text-purple-700 border border-purple-200'
  },
  {
    id: '12386',
    customer: 'Carlos López',
    date: '25 de enero, 11:30',
    total: 278.30,
    status: 'Entregado',
    statusColor: 'bg-green-50 text-green-700 border border-green-200'
  }
];

const topProducts = [
  { name: 'Royal Canin Puppy 15kg', sales: 145, revenue: 21750.00 },
  { name: 'Collar Antipulgas', sales: 98, revenue: 8379.00 },
  { name: 'Juguete Pelota Interactiva', sales: 87, revenue: 3915.00 },
  { name: 'Shampoo Antipulgas', sales: 76, revenue: 4940.00 }
